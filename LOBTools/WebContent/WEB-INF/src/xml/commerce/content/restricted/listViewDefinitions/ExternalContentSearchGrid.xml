<Definitions>
	<!---
		This definition displays the contents and characteristics of a list of {@link cmc/content/ExternalContent}
	-->	
	<ObjectGrid definitionName="cmc/content/ExternalContentUtilitiesSearchGrid" preferenceKey="cntExternalContentUtilitiesSearchGrid">
		<dependency localName="foundationResources" moduleName="cmc/foundation/FoundationResources"/>
		<dependency localName="contentResources" moduleName="cmc/content/ExternalContentResources"/>
		
		<GridIconTypeImage name="typeIcon" propertyName="null" required="true" text="${foundationResources.utilitiesGrid_type}" width="50"/>
		<GridImage name="displayAssetImage" propertyName="displayAssetFullPath" sortable="false" text="${contentResources.externalContentAsset_ColumnHeader}" visible="true"/>
 		<GridText name="identifier" propertyName="identifier" text="${contentResources.externalContentIdentifier_ColumnHeader}" visible="false" width="150"/>
		<GridText name="name" propertyName="name" text="${contentResources.externalContentName_ColumnHeader}" visible="true" width="150"/>
	 	<GridText name="assetsCount" propertyName="assetsCount" text="${contentResources.externalContentAssetCount_ColumnHeader}" visible="true" width="100"/>
		<GridText name="description" propertyName="description" text="${contentResources.externalContentDescription_ColumnHeader}" visible="false" width="150"/>
		<GridText name="contentType" propertyName="contentType" text="${contentResources.externalContentContentType_ColumnHeader}" visible="true" width="150"/>
	</ObjectGrid>
</Definitions>