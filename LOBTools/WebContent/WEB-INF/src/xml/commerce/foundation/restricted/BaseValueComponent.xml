<Definitions>
	<FocusableComponent classDefinition="true" definitionName="cmc/foundation/BaseValueComponent">
		<variable name="value" value="null"/>

		 <!--- returns the value that is represented by this component
        -->
        <method name="getValue">
        	<![CDATA[
            return this.value == null ? this.text : this.value;
            ]]>
        </method>
	</FocusableComponent>
</Definitions>