<Definitions>
	<ObjectProperties definitionName="cmc/layout/PageLayoutProperties">
		<dependency localName="pageLayoutResources" moduleName="cmc/layout/PageLayoutResources"/>
		<PropertyPane name="pane">
			<!-- Property Group: General Page Layout Information. This properties group contains general page layout information such as name, description etc -->
			<PropertyGroup collapsable="false" groupTitle="${pageLayoutResources.generalInformationSection}" hideHeaderWhenOnlyGroup="true" name="generalInfoPropGrp" open="true">
				<!-- Property: Name. An input box for the name property. -->
				<PropertyInputLongText enabled="false" promptText="${pageLayoutResources.namePrompt}" propertyName="name"/>
				<!-- Property: Description. A text editor for the description property. -->
				<PropertyInputMultiLineText enabled="false" promptText="${pageLayoutResources.descriptionPrompt}" propertyName="description"/>
				<!-- Property : Full image. An image editor for the fImage property -->
				<ImageEditor enabled="false" promptText="${pageLayoutResources.fullImagePrompt}" propertyName="fImage" showText="false"/>
			</PropertyGroup>
		</PropertyPane>
	</ObjectProperties>
</Definitions>