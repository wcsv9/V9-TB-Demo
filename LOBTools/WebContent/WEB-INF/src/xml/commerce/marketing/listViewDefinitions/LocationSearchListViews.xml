<Definitions>
	<!---
		This grid displays the contents and characteristics of a list of {@link LocationPOI LocationPOI}.
	-->
	<ObjectGrid definitionName="cmc/marketing/SearchLocationPOIGrid" preferenceKey="mktSearchLocationPOIGrid">
		<dependency localName="marketingResources" moduleName="cmc/marketing/MarketingResources"/>
		<GridText alignment="left" editable="false" name="regionId" propertyName="regionId" text="${marketingResources.regionId}" visible="false" width="30"/>
		<GridText alignment="left" editable="false" name="pointOfInterestName" propertyName="name" text="${marketingResources.objectName}" visible="true" width="100"/>
		<GridText alignment="left" editable="false" name="description" propertyName="description" text="${marketingResources.description}" visible="true" width="180"/>
	</ObjectGrid>

	<!---
		This grid displays the contents and characteristics of a list of {@link LocationRegion LocationRegion}.
	-->
	<ObjectGrid definitionName="cmc/marketing/SearchLocationRegionGrid" preferenceKey="mktSearchLocationRegionGrid">
		<dependency localName="marketingResources" moduleName="cmc/marketing/MarketingResources"/>
		<GridText alignment="left" editable="false" name="regionId" propertyName="regionId" text="${marketingResources.regionId}" visible="false" width="30"/>
		<GridText alignment="left" editable="false" name="pointOfInterestId" propertyName="pointOfInterestId" text="${marketingResources.pointOfInterestId}" visible="false" width="30"/>
		<GridText alignment="left" editable="false" name="regionName" propertyName="name" text="${marketingResources.objectName}" visible="true" width="100"/>
		<GridText alignment="left" editable="false" name="description" propertyName="description" text="${marketingResources.description}" visible="true" width="180"/>
	</ObjectGrid>
</Definitions>