<Definitions>
	<!---
		<p>This is the flow element object definition for the Display Product action. This object defines the following child elements:
		<ul>
		<li>{@link cmc/marketing/FlowElementCreateService FlowElementCreateService} with PROPERTY_catalogEntryIdList as a parameter</li>
		<li>{@link cmc/marketing/FlowElementUpdateService FlowElementUpdateService} with PROPERTY_catalogEntryIdList as a parameter</li>
		<li>{@link cmc/foundation/ReferenceObjectDefinition ReferenceObjectDefinition} that defines a new ChildCatentry type which references the catalog entry object types</li>
		<li>{@link cmc/foundation/ReferenceObjectDefinition ReferenceObjectDefinition} that defines a new ChildInheritedCatentry type which references the inherited catalog entry object types</li>
		<li>{@link cmc/foundation/ChildObjectDefinition BaseSearchFilterChildObjectDefinition} that defines a new catalog entry property filter</li>
		<li>{@link cmc/foundation/ChildObjectDefinition BaseSearchFilterChildObjectDefinition} that defines a new catalog entry type filter</li>
		<li>{@link cmc/foundation/ReferenceObjectDefinition BaseSearchFilterCatalogGroup} that defines a new category filter</li>
		<li>{@link cmc/foundation/ReferenceObjectDefinition BaseSearchFilterChildAttributeWithAllowedValues} that defines a new 'attribute dictionary allowed values attribute' filter</li>
		<li>{@link cmc/foundation/ChildObjectDefinition ChildFacetExclusion} that defines which facets to exclude</li>
		<li>{@link cmc/foundation/ChildObjectDefinition searchActionOrderBy} that defines a new property based sort criteria type</li>
		<li>instance of {@link cmc/foundation/RequiredChildObjectValidator RequiredChildObjectValidator} to ensure at least one catalog entry is selected</li>
		<li>instance of {@link cmc/foundation/RequiredChildObjectValidator UniqueValueForChildObjectPropertyValidator} to ensure search filter property has a unique value for text properties</li>
		<li>instance of {@link cmc/foundation/RequiredChildObjectValidator UniqueValueForChildObjectPropertyValidator} to ensure order by field property has a unique value</li>
		<li>instance of {@link cmc/foundation/RequiredChildObjectValidator UniqueValueForChildObjectPropertyValidator} to ensure facet exclusion field property has a unique value</li>
		</ul>
		</p>
		<p>This object also has the following pre-defined properties and restrictions:
		<ul>
		<li><b>elemTemplateName</b>: required flow element template name. Must be one of displayProduct or displayProductStandardSearchCombined.</li>
		<li><b>useUserSearchTerm</b>: optional property with possible values "true" and "false"</li>
		<li><b>searchTermList</b>: optional property which is a comma separated list of search terms</li>
		<li><b>recommendationMethod</b>: required property to identify the recommendation method. It must be one of specifyList or createSearchConditions.</li>
		<li><b>displayMax</b>: optional property to define maximum results to return from search.</li>
		</ul>
		</p>
	-->
	<FlowElementObjectDefinition definitionName="cmc/marketing/DisplayProductCombinedElementObject" displayName="${marketingResources.displayProductName}" elemTemplateType="Action" flowIcon="displayProductIcon" headerIcon="displayProductHeaderIcon" helpLink="concepts/csbactdiscatentry.htm" objectType="displayProductCombined" package="cmc/marketing" paletteIcon="displayProductPaletteIcon" propertiesDefinition="cmc/marketing/DisplayProductCombinedProperties" summaryClass="cmc/marketing/DisplayProductCombinedSummary" templateTypeProperty="elemTemplateName">
		<dependency localName="marketingResources" moduleName="cmc/marketing/MarketingResources"/>
		<dependency localName="searchResources" moduleName="cmc/search/SearchResources"/>
		<MatchesWidgetActivityTypeEnablementCondition conditionId="matchType" objectTypes="RecommendCatentry" package="cmc/marketing"/>
		<CreateService baseDefinition="cmc/marketing/FlowElementCreateService">
			<ServiceParam name="PROPERTY_catalogEntryIdList" objectPath="ChildCatentryGroup/CatalogEntry" optional="true" propertyName="catentryId">
				<EnablementCondition conditionId="displayProduct" enablementValue="displayProduct" propertyName="elemTemplateName"/>
			</ServiceParam>
			<ServiceParam name="ASSOCIATEDPROPERTY_sequence_catalogEntryIdList" objectPath="ChildCatentryGroup" optional="true" propertyName="sequence">
				<EnablementCondition conditionId="displayProduct" enablementValue="displayProduct" propertyName="elemTemplateName"/>
			</ServiceParam>
		</CreateService>
		<UpdateService baseDefinition="cmc/marketing/FlowElementUpdateService">
			<ServiceParam name="PROPERTY_catalogEntryIdList" objectPath="ChildCatentryGroup/CatalogEntry" optional="true" propertyName="catentryId">
				<EnablementCondition conditionId="displayProduct" enablementValue="displayProduct" propertyName="elemTemplateName"/>
			</ServiceParam>
			<ServiceParam name="ASSOCIATEDPROPERTY_sequence_catalogEntryIdList" objectPath="ChildCatentryGroup" optional="true" propertyName="sequence">
				<EnablementCondition conditionId="displayProduct" enablementValue="displayProduct" propertyName="elemTemplateName"/>
			</ServiceParam>
		</UpdateService>
		<Xml name="template">
			<recommendationMethod>specifyList</recommendationMethod>
			<elemTemplateName>displayProduct</elemTemplateName>
			<useUserSearchTerm>false</useUserSearchTerm>
			<displayMax>5</displayMax>
		</Xml>
		<ObjectTemplate deleteObjectTypes="ChildCatentryGroup" templateType="displayProduct"/>
		<ObjectTemplate deleteObjectTypes="filterGroup,searchActionOrderByGroup,ChildFacetExclusion" templateType="displayProductStandardSearchCombined">
			<EnablementCondition conditionId="searchEnabledContextValueCondition" contextName="searchEnabled" enablementValue="true"/>
		</ObjectTemplate>
		<!---
			The following objects and validators are for displayProduct object template
		-->
		<!--- References to catalog entry for displayProduct object template -->
		<ReferenceObjectDefinition allowDuplicates="false" allowedParentTypes="WebActivity,WebActivityTemplate" derivedId="true" idProperty="childCatentryId" objectGroups="ChildCatentryGroup" objectType="ChildCatentry" referencedTypes="Product,Bundle,CatalogGroupSKU,ProductSKU,Kit,PredefinedDKit"/>
		<ReferenceObjectDefinition allowDuplicates="false" derivedId="true" idProperty="childCatentryId" objectGroups="ChildCatentryGroup" objectType="ChildInheritedCatentry" referencedTypes="InheritedProduct,InheritedBundle,InheritedCatalogGroupSKU,InheritedProductSKU,InheritedKit,InheritedPredefinedDKit"/>
		<!--- References validator for displayProduct object template -->
		<RequiredChildObjectValidator errorMessage="${marketingResources.noProductsSelected}" objectPath="ChildCatentryGroup" validatorId="reqChildValidator" validatorType="noProductsSelected">
			<EnablementCondition conditionId="displayProduct" enablementValue="displayProduct" propertyName="elemTemplateName"/>
		</RequiredChildObjectValidator>
		<!---
			The following objects and validators are for displayProductStandardSearchCombined object template
		-->
		<!---
			The following properties are for displayProductStandardSearchCombined object template
		-->
		<PropertyDefinition displayName="${marketingResources.searchValues}" maximumSize="254" propertyName="searchTermList" trim="yes">
			<EnablementCondition conditionId="displayProductStandardSearchCombined" enablementValue="displayProductStandardSearchCombined" propertyName="elemTemplateName"/>
		</PropertyDefinition>
		<PropertyDefinition displayName="${marketingResources.displayProduct_useUserSearchTerms}" propertyName="useUserSearchTerm">
			<EnablementCondition conditionId="displayProductStandardSearchCombined" enablementValue="displayProductStandardSearchCombined" propertyName="elemTemplateName"/>
		</PropertyDefinition>
		<PropertyDefinition displayName="${marketingResources.displayProduct_displayMax}" propertyName="displayMax">
			<EnablementCondition conditionId="displayProductStandardSearchCombined" enablementValue="displayProductStandardSearchCombined" propertyName="elemTemplateName"/>
		</PropertyDefinition>
		<!---
			The following objects are used to define filters
		-->
		<!--- Filter by: Property -->
		<ChildObjectDefinition baseDefinition="cmc/marketing/BaseCatalogEntryPropertySearchFilterObjectDefinition"/>
		<!--- Filter by: Catalog entry type -->
		<!--- The catalog entry type child object definition for search filter. -->
		<ChildObjectDefinition baseDefinition="cmc/marketing/BaseSearchFilterChildObjectDefinition" displayName="${marketingResources.displayProduct_catalogEntryType}" icon="productIcon" objectType="catenttype_id_ntk_cs">
			<Xml name="template">
				<filterName>catenttype_id_ntk_cs</filterName>
				<filterType>catalogEntryType</filterType>
			</Xml>
			<PropertyDefinition displayName="${marketingResources.displayProduct_searchFilterMatchingRule}" propertyName="filterOperator" required="true">
				<PropertyValue displayName="${marketingResources.filterMatchingRule_matchesOneOf}" isDefault="true" value="="/>
				<PropertyValue displayName="${marketingResources.filterMatchingRule_doesNotMatchAny}" value="!="/>
			</PropertyDefinition>
			<ChildObjectDefinition idProperty="filterValueId" objectType="filterValue">
				<PropertyDefinition displayName="${marketingResources.displayProduct_searchFilterValue}" forceParentValidation="true" propertyName="filterValue">
					<PropertyValue displayName="${marketingResources.displayProduct_product}" value="ProductBean"/>
					<PropertyValue displayName="${marketingResources.displayProduct_sku}" value="ItemBean"/>
					<PropertyValue displayName="${marketingResources.displayProduct_bundle}" value="BundleBean"/>
					<PropertyValue displayName="${marketingResources.displayProduct_kit}" value="PackageBean"/>
					<PropertyValue displayName="${marketingResources.displayProduct_dynamicKit}" value="DynamicKitBean"/>
				</PropertyDefinition>
			</ChildObjectDefinition>
			<RequiredChildObjectValidator objectPath="filterValue" propertyName="filterValue" validatorId="reqValueValidator" validatorType="noFilterValue"/>
		</ChildObjectDefinition>
		<!--- Filter by: Catalog group -->
		<!--- These reference object definitions define a category for search filter. -->
		<ReferenceObjectDefinition allowedParentTypes="WebActivity,WebActivityTemplate" baseDefinition="cmc/marketing/BaseSearchFilterCatalogGroup" objectType="ChildCatalogGroup" referencedTypes="CatalogGroup,SalesCatalogGroup,DynamicSalesCatalogGroup">
			<Xml name="template">
				<filterType>catgroupType</filterType>
			</Xml>
			<EnablementAndCondition>
				<EnablementCondition conditionId="showCategoryFilterCondition" enablementValue="false" propertyName="includeCategories"/>
				<EnablementCondition conditionId="activityStatusCondition" enablementValue="Inactive" parentProperty="true" parentType="WebActivityGroup" propertyName="state"/>
			</EnablementAndCondition>
		</ReferenceObjectDefinition>
		<ReferenceObjectDefinition baseDefinition="cmc/marketing/BaseSearchFilterCatalogGroup" objectType="ChildInheritedCatalogGroup" referencedTypes="InheritedCatalogGroup,InheritedSalesCatalogGroup,InheritedDynamicSalesCatalogGroup">
			<Xml name="template">
				<filterType>catgroupType</filterType>
			</Xml>
			<EnablementAndCondition>
				<EnablementCondition conditionId="showCategoryFilterCondition" enablementValue="false" propertyName="includeCategories"/>
				<EnablementCondition conditionId="activityStatusCondition" enablementValue="Inactive" parentProperty="true" parentType="WebActivityGroup" propertyName="state"/>
			</EnablementAndCondition>
		</ReferenceObjectDefinition>
		<!--- Filter by: Predefined merchandisable attribute dictionary attributes -->
		<!--- This reference object definition is for an attribute dictionary attribute with allowed values for search filter. -->
		<ReferenceObjectDefinition allowDuplicates="false" allowedParentTypes="WebActivity,WebActivityTemplate" baseDefinition="cmc/marketing/BaseSearchFilterChildAttributeWithAllowedValues" objectType="ChildAttributeWithAllowedValues" referencedTypes="AttributeDictionaryAttributeWithAllowedValues">
			<Xml name="template">
				<filterType>attributeType</filterType>
			</Xml>
			<!--- Attributes must be defined as merchandisable. -->
			<EnablementCondition conditionType="childObjectCondition" enablementValue="true" propertyName="merchandisable"/>
		</ReferenceObjectDefinition>
		<ReferenceObjectDefinition allowDuplicates="false" baseDefinition="cmc/marketing/BaseSearchFilterChildAttributeWithAllowedValues" objectType="ChildInheritedAttributeWithAllowedValues" referencedTypes="InheritedAttributeDictionaryAttributeWithAllowedValues">
			<Xml name="template">
				<filterType>attributeType</filterType>
			</Xml>
			<!--- Attributes must be defined as merchandisable. -->
			<EnablementCondition conditionType="childObjectCondition" enablementValue="true" propertyName="merchandisable"/>
		</ReferenceObjectDefinition>
		<!--- This object defines which facet to exclude in the search -->
		<ChildObjectDefinition displayName="${searchResources.facet}" icon="facetIcon" idProperty="elementName" objectType="ChildFacetExclusion">
			<PropertyDefinition displayName="${searchResources.facetExclusion}" forceParentValidation="true" propertyName="facetExclusionField" required="true">
				<PropertyValueService url="/cmc/GetSearchFacetExclusionColumns">
					<ServiceParam name="storeId"/>
				</PropertyValueService>
			</PropertyDefinition>
			<CreateService sendMultiValues="true" sendPrefix="true" url="/cmc/CreateCampaignElement">
				<ServiceParam name="storeId"/>
				<ServiceParam name="activityId" parentProperty="true"/>
				<ServiceParam name="parentElementName" parentProperty="true" propertyName="elementName" resolvePrimaryParent="false"/>
				<ServiceParam name="PROPERTY_elemTemplateType" value="Data"/>
				<ServiceParam name="PROPERTY_facetExclusionFieldType" propertyName="facetExclusionFieldType"/>
				<ServiceParam name="PROPERTY_facetExclusionFieldCode" value=" "/>
				<ServiceParam name="PROPERTY_elemTemplateName" value="searchActionFacetExclusion"/>
			</CreateService>
			<UpdateService sendAll="true" sendMultiValues="true" sendPrefix="true" url="/cmc/SaveCampaignElement">
				<ServiceParam name="storeId"/>
				<ServiceParam name="activityId" parentProperty="true"/>
				<ServiceParam name="parentElementName" parentProperty="true" propertyName="elementName" resolvePrimaryParent="false"/>
				<ServiceParam name="PROPERTY_elemTemplateType" value="Data"/>
				<ServiceParam name="PROPERTY_facetExclusionFieldType" propertyName="facetExclusionFieldType"/>
				<ServiceParam name="PROPERTY_facetExclusionFieldCode" value=" "/>
				<ServiceParam name="PROPERTY_elemTemplateName" value="searchActionFacetExclusion"/>
			</UpdateService>
			<DeleteService url="/cmc/DeleteCampaignElement">
				<ServiceParam name="storeId"/>
				<ServiceParam name="activityId" parentProperty="true"/>
				<ServiceParam name="PROPERTY_elementName" propertyName="elementName"/>
			</DeleteService>
			<!--- This is the property identifier  -->
			<Xml name="template">
				<facetExclusionFieldType>facetExclusion</facetExclusionFieldType>
			</Xml>
		</ChildObjectDefinition>
		<!---
			The following objects are used to define sort by order
		-->
		<!--- Order by: Product property -->
		<!--- This object defines a property as a sort criteria for the displayed products. -->
		<ChildObjectDefinition displayName="${marketingResources.displayProduct_searchFilterProperty}" icon="propertyAttributeIcon" idProperty="elementName" objectGroups="searchActionOrderByGroup" objectType="searchActionOrderBy">
			<PropertyDefinition displayName="${marketingResources.displayProduct_orderByField}" forceParentValidation="true" propertyName="orderByField" required="true">
				<PropertyValueService url="/cmc/GetSearchSortColumns">
					<ServiceParam name="storeId"/>
				</PropertyValueService>
			</PropertyDefinition>
			<PropertyDefinition displayName="${marketingResources.displayProduct_orderBySequence}" propertyName="orderBySequence" required="true">
				<PropertyValue displayName="${marketingResources.displayProduct_orderByAscending}" value="asc"/>
				<PropertyValue displayName="${marketingResources.displayProduct_orderByDescending}" isDefault="true" value="desc"/>
			</PropertyDefinition>
			<PropertyDefinition displayName="${marketingResources.displayProduct_orderByPriority}" propertyName="sequence" required="true" type="number"/>
			<CreateService sendMultiValues="true" sendPrefix="true" url="/cmc/CreateCampaignElement">
				<ServiceParam name="storeId"/>
				<ServiceParam name="activityId" parentProperty="true"/>
				<ServiceParam name="parentElementName" parentProperty="true" propertyName="elementName" resolvePrimaryParent="false"/>
				<ServiceParam name="PROPERTY_elemTemplateType" value="Data"/>
				<ServiceParam name="PROPERTY_orderByFieldType" propertyName="orderByFieldType"/>
				<ServiceParam name="PROPERTY_orderByFieldCode" value=" "/>
				<ServiceParam name="PROPERTY_elemTemplateName" value="searchActionOrderBy"/>
			</CreateService>
			<UpdateService sendAll="true" sendMultiValues="true" sendPrefix="true" url="/cmc/SaveCampaignElement">
				<ServiceParam name="storeId"/>
				<ServiceParam name="activityId" parentProperty="true"/>
				<ServiceParam name="parentElementName" parentProperty="true" propertyName="elementName" resolvePrimaryParent="false"/>
				<ServiceParam name="PROPERTY_elemTemplateType" value="Data"/>
				<ServiceParam name="PROPERTY_orderByFieldType" propertyName="orderByFieldType"/>
				<ServiceParam name="PROPERTY_orderByFieldCode" value=" "/>
				<ServiceParam name="PROPERTY_elemTemplateName" value="searchActionOrderBy"/>
			</UpdateService>
			<DeleteService url="/cmc/DeleteCampaignElement">
				<ServiceParam name="storeId"/>
				<ServiceParam name="activityId" parentProperty="true"/>
				<ServiceParam name="PROPERTY_elementName" propertyName="elementName"/>
			</DeleteService>
			<!--- This is the property identifier  -->
			<Xml name="template">
				<orderByFieldType>catalogEntryProperty</orderByFieldType>
			</Xml>
		</ChildObjectDefinition>
		<!---
			The following validators are for displayProductStandardSearchCombined template
		-->
		<!--- The search filter property must have a unique value for text properties. -->
		<UniqueValueForChildObjectPropertyValidator objectPath="catalogEntryPropertySearchFilter" propertyName="filterName" validatorId="propertyFilterCriteriaUniquenessValidator">
			<EnablementAndCondition>
				<EnablementCondition conditionId="displayProductStandardSearchCombined" enablementValue="displayProductStandardSearchCombined" propertyName="elemTemplateName"/>
				<EnablementCondition conditionId="ExactStringValueCondition" enablementValue="EXACTSTRING" objectPath="catalogEntryPropertySearchFilter" propertyName="filterDataType"/>
			</EnablementAndCondition>
		</UniqueValueForChildObjectPropertyValidator>
		<!--- The order by field property must have a unique value. -->
		<UniqueValueForChildObjectPropertyValidator objectPath="searchActionOrderBy" propertyName="orderByField" validatorId="sortCriteriaUniquenessValidator">
			<EnablementCondition conditionId="displayProductStandardSearchCombined" enablementValue="displayProductStandardSearchCombined" propertyName="elemTemplateName"/>
		</UniqueValueForChildObjectPropertyValidator>
		<!--- The facet exclusion field property must have a unique value. -->
		<UniqueValueForChildObjectPropertyValidator objectPath="ChildFacetExclusion" propertyName="facetExclusionField" validatorId="facetExclusionUniquenessValidator">
			<EnablementCondition conditionId="displayProductStandardSearchCombined" enablementValue="displayProductStandardSearchCombined" propertyName="elemTemplateName"/>
		</UniqueValueForChildObjectPropertyValidator>
		<DisplayProductFlowCombinedElementValidator package="cmc/marketing"/>
	</FlowElementObjectDefinition>

	<!---
		The following are the base object definition for this class.
	-->
	<!---
		Base reference object definition for attribute dictionary attribute with
		allowed values for a search filter.
	-->
	<ReferenceObjectDefinition definitionName="cmc/marketing/BaseSearchFilterChildAttributeWithAllowedValues" displayName="${catalogResources.attributeDictionaryAttribute}" idProperty="elementName" objectGroups="filterGroup,ChildAttributeWithAllowedValuesGroup">
		<dependency localName="marketingResources" moduleName="cmc/marketing/MarketingResources"/>
		<dependency localName="catalogResources" moduleName="cmc/catalog/CatalogResources"/>
		<PropertyDefinition displayName="${marketingResources.displayProduct_searchFilterMatchingRule}" propertyName="filterOperator" required="true">
			<PropertyValue displayName="${marketingResources.filterMatchingRule_matches}" isDefault="true" value="=">
				<EnablementCondition conditionId="stringValueCondition" enablementValue="String" objectPath="AttributeDictionaryAttributes" propertyName="attrDataType"/>
			</PropertyValue>
			<PropertyValue displayName="${marketingResources.filterMatchingRule_doesNotMatch}" value="!=">
				<EnablementCondition conditionId="stringValueCondition" enablementValue="String" objectPath="AttributeDictionaryAttributes" propertyName="attrDataType"/>
			</PropertyValue>
			<PropertyValue displayName="${marketingResources.filterMatchingRule_equals}" isDefault="true" value="=">
				<EnablementOrCondition>
					<EnablementCondition conditionId="integerValueCondition" enablementValue="Integer" objectPath="AttributeDictionaryAttributes" propertyName="attrDataType"/>
					<EnablementCondition conditionId="floatValueCondition" enablementValue="Float" objectPath="AttributeDictionaryAttributes" propertyName="attrDataType"/>
				</EnablementOrCondition>
			</PropertyValue>
			<PropertyValue displayName="${marketingResources.filterMatchingRule_notEquals}" value="!=">
				<EnablementOrCondition>
					<EnablementCondition conditionId="integerValueCondition" enablementValue="Integer" objectPath="AttributeDictionaryAttributes" propertyName="attrDataType"/>
					<EnablementCondition conditionId="floatValueCondition" enablementValue="Float" objectPath="AttributeDictionaryAttributes" propertyName="attrDataType"/>
				</EnablementOrCondition>
			</PropertyValue>
			<PropertyValue displayName="${marketingResources.filterMatchingRule_lessThan}" value="&lt;">
				<EnablementOrCondition>
					<EnablementCondition conditionId="integerValueCondition" enablementValue="Integer" objectPath="AttributeDictionaryAttributes" propertyName="attrDataType"/>
					<EnablementCondition conditionId="floatValueCondition" enablementValue="Float" objectPath="AttributeDictionaryAttributes" propertyName="attrDataType"/>
				</EnablementOrCondition>
			</PropertyValue>
			<PropertyValue displayName="${marketingResources.filterMatchingRule_greaterThan}" value="&gt;">
				<EnablementOrCondition>
					<EnablementCondition conditionId="integerValueCondition" enablementValue="Integer" objectPath="AttributeDictionaryAttributes" propertyName="attrDataType"/>
					<EnablementCondition conditionId="floatValueCondition" enablementValue="Float" objectPath="AttributeDictionaryAttributes" propertyName="attrDataType"/>
				</EnablementOrCondition>
			</PropertyValue>
		</PropertyDefinition>
		<CreateService sendMultiValues="true" sendPrefix="true" url="/cmc/CreateCampaignElement">
			<ServiceParam name="storeId"/>
			<ServiceParam name="activityId" parentProperty="true"/>
			<ServiceParam name="parentElementName" parentProperty="true" propertyName="elementName" resolvePrimaryParent="false"/>
			<ServiceParam name="PROPERTY_elemTemplateType" value="Data"/>
			<ServiceParam name="PROPERTY_filterType" propertyName="filterType"/>
			<ServiceParam name="PROPERTY_elemTemplateName" value="searchActionFilter"/>
			<ServiceParam name="PROPERTY_filterName" objectPath="AttributeDictionaryAttributes" propertyName="attrId"/>
			<ServiceParam name="PROPERTY_filterValue" objectPath="ChildAttributeAllowedValues" propertyName="attrValId"/>
			<ServiceParam name="PROPERTY_filterValue2" propertyName="filterValue2" value=" "/>
			<ServiceParam name="PROPERTY_filterCode" objectPath="AttributeDictionaryAttributes" propertyName="attributeCode"/>
		</CreateService>
		<UpdateService sendAll="true" sendMultiValues="true" sendPrefix="true" url="/cmc/SaveCampaignElement">
			<ServiceParam name="storeId"/>
			<ServiceParam name="activityId" parentProperty="true"/>
			<ServiceParam name="parentElementName" parentProperty="true" propertyName="elementName" resolvePrimaryParent="false"/>
			<ServiceParam name="PROPERTY_elemTemplateType" value="Data"/>
			<ServiceParam name="PROPERTY_filterType" propertyName="filterType"/>
			<ServiceParam name="PROPERTY_elemTemplateName" value="searchActionFilter"/>
			<ServiceParam name="PROPERTY_filterName" objectPath="AttributeDictionaryAttributes" propertyName="attrId"/>
			<ServiceParam name="PROPERTY_filterValue" objectPath="ChildAttributeAllowedValues" propertyName="attrValId"/>
			<ServiceParam name="PROPERTY_filterValue2" propertyName="filterValue2" value=" "/>
			<ServiceParam name="PROPERTY_filterCode" objectPath="AttributeDictionaryAttributes" propertyName="attributeCode"/>
		</UpdateService>
		<DeleteService url="/cmc/DeleteCampaignElement">
			<ServiceParam name="storeId"/>
			<ServiceParam name="activityId" parentProperty="true"/>
			<ServiceParam name="PROPERTY_elementName" propertyName="elementName"/>
		</DeleteService>
		<ChildObjectDefinition idProperty="attrValId" objectType="ChildAttributeAllowedValues">
			<PropertyDefinition displayName="${marketingResources.displayProduct_searchFilterValue}" forceParentValidation="true" propertyName="attrValId"/>
		</ChildObjectDefinition>
		<RequiredChildObjectValidator objectPath="ChildAttributeAllowedValues" propertyName="attrValId" validatorId="reqAllowedValue" validatorType="noFilterValue"/>
		<SearchFilterAttributeRuleValidator package="cmc/marketing" singleValueOperators="&lt;,&gt;"/>
	</ReferenceObjectDefinition>

	<!--- Base object definition for child filter objects -->
	<ChildObjectDefinition definitionName="cmc/marketing/BaseSearchFilterChildObjectDefinition" idProperty="elementName" objectGroups="filterGroup">
		<CreateService sendMultiValues="true" sendPrefix="true" url="/cmc/CreateCampaignElement">
			<ServiceParam name="storeId"/>
			<ServiceParam name="activityId" parentProperty="true"/>
			<ServiceParam name="parentElementName" parentProperty="true" propertyName="elementName" resolvePrimaryParent="false"/>
			<ServiceParam name="PROPERTY_elemTemplateType" value="Data"/>
			<ServiceParam name="PROPERTY_elemTemplateName" value="searchActionFilter"/>
			<ServiceParam name="PROPERTY_filterName" propertyName="filterName"/>
			<ServiceParam name="PROPERTY_filterType" propertyName="filterType"/>
			<ServiceParam name="PROPERTY_filterCode" value=" "/>
			<ServiceParam name="PROPERTY_filterValue2" propertyName="filterValue2" value=" "/>
			<ServiceParam name="PROPERTY_filterValueNonNumeric" objectPath="filterValue" parameterName="PROPERTY_filterValue" propertyName="filterValue">
				<EnablementCondition conditionId="catalogEntryPropertySearchFilterCondition" enablementValue="NUMERIC" negate="true" propertyName="filterDataType"/>
			</ServiceParam>
			<ServiceParam name="PROPERTY_filterValueNumeric" parameterName="PROPERTY_filterValue" propertyName="filterValue">
				<EnablementCondition conditionId="catalogEntryPropertySearchFilterCondition" enablementValue="NUMERIC" propertyName="filterDataType"/>
			</ServiceParam>
			<ServiceParam name="PROPERTY_filterOperator1" parameterName="PROPERTY_filterOperator" propertyName="filterOperatorExactString">
				<EnablementCondition conditionId="catalogEntryPropertySearchFilterCondition" enablementValue="EXACTSTRING" propertyName="filterDataType"/>
			</ServiceParam>
			<ServiceParam name="PROPERTY_filterOperator2" parameterName="PROPERTY_filterOperator" propertyName="filterOperatorNumeric">
				<EnablementCondition conditionId="catalogEntryPropertySearchFilterCondition" enablementValue="NUMERIC" propertyName="filterDataType"/>
			</ServiceParam>
			<ServiceParam name="PROPERTY_filterOperator3" parameterName="PROPERTY_filterOperator" propertyName="filterOperator">
				<EnablementAndCondition>
					<EnablementCondition conditionId="catalogEntryPropertySearchFilterCondition1" enablementValue="NUMERIC" negate="true" propertyName="filterDataType"/>
					<EnablementCondition conditionId="catalogEntryPropertySearchFilterCondition2" enablementValue="EXACTSTRING" negate="true" propertyName="filterDataType"/>
					<EnablementCondition conditionId="catalogEntryPropertySearchFilterCondition3" enablementValue="ANYSTRING" negate="true" propertyName="filterDataType"/>
				</EnablementAndCondition>
			</ServiceParam>
			<ServiceParam name="PROPERTY_filterOperator4" parameterName="PROPERTY_filterOperator" propertyName="filterOperatorAnyString">
				<EnablementCondition conditionId="catalogEntryPropertySearchFilterCondition" enablementValue="ANYSTRING" propertyName="filterDataType"/>
			</ServiceParam>
		</CreateService>
		<UpdateService sendAll="true" sendMultiValues="true" sendPrefix="true" url="/cmc/SaveCampaignElement">
			<ServiceParam name="storeId"/>
			<ServiceParam name="activityId" parentProperty="true"/>
			<ServiceParam name="parentElementName" parentProperty="true" propertyName="elementName" resolvePrimaryParent="false"/>
			<ServiceParam name="PROPERTY_elemTemplateType" value="Data"/>
			<ServiceParam name="PROPERTY_elemTemplateName" value="searchActionFilter"/>
			<ServiceParam name="PROPERTY_filterName" propertyName="filterName"/>
			<ServiceParam name="PROPERTY_filterType" propertyName="filterType"/>
