<Definitions>
	<ObjectProperties definitionName="cmc/marketing/CampaignProperties">
		<dependency localName="marketingResources" moduleName="cmc/marketing/MarketingResources"/>
		<PropertyPane name="pane">
			<PropertyGroup baseDefinition="cmc/foundation/PropertyAssetInformationGroup" name="assetGroup"/>
			<PropertyGroup groupTitle="${marketingResources.campaignProperties}" hideHeaderWhenOnlyGroup="true" name="group" open="true">
				<PropertyInputText helpText="${marketingResources.help_campaign_name}" promptText="${marketingResources.objectName}" propertyName="name" required="true"/>
				<PropertyInputText helpText="${marketingResources.help_campaign_owner}" promptText="${marketingResources.owner}" propertyName="owner"/>
				<PropertyInputLongText helpText="${marketingResources.help_campaign_season}" promptText="${marketingResources.season}" propertyName="season"/>
				<PropertyInputMultiLineText promptText="${marketingResources.description}" propertyName="description"/>
				<PropertyInputMultiLineText promptText="${marketingResources.objective}" propertyName="objective"/>
			</PropertyGroup>
		</PropertyPane>
	</ObjectProperties>
</Definitions>