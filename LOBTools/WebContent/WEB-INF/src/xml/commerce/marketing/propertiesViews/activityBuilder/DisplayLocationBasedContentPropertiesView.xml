<Definitions>
	<!---
		Properties view for the {@link cmc/marketing/DisplayLocationBasedContentElementObject Display Location-based Content action}.
	-->
	<FlowElementProperties definitionName="cmc/marketing/DisplayLocationBasedContentProperties">
		<dependency localName="marketingResources" moduleName="cmc/marketing/MarketingResources"/>
		<PropertyGroup collapsable="false" name="group">
			<PropertyCombobox helpText="${marketingResources.help_locationcontent_locationType}" promptText="${marketingResources.locationType}" propertyName="locationType"/>
			<PropertyInputText helpText="${marketingResources.help_locationcontent_prefix}" promptText="${marketingResources.urlPrefix}" propertyName="urlPrefix" required="false"/>
			<PropertyInputText helpText="${marketingResources.help_locationcontent_suffix}" promptText="${marketingResources.urlSuffix}" propertyName="urlSuffix" required="false"/>
		</PropertyGroup>
	</FlowElementProperties>
</Definitions>