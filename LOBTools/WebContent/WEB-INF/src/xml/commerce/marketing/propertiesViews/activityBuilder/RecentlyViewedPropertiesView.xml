<Definitions>
	<!---
		Properties view for the {@link cmc/marketing/RecentlyViewedElementObject Display Recently Viewed action}.
	-->
	<FlowElementProperties definitionName="cmc/marketing/RecentlyViewedProperties">
		<dependency localName="marketingResources" moduleName="cmc/marketing/MarketingResources"/>
		<PropertyGroup collapsable="false" name="containerGroup">
			<PropertyCombobox helpText="${marketingResources.help_recentlyviewed_typeOfList}" promptText="${marketingResources.recentlyViewedCriteria}" propertyName="elemTemplateName"/>
			<PropertyStepper minimumValue="1" name="numberOfTimes" promptText="${marketingResources.maximumNumberToDisplay}" propertyName="numberOfTimes" required="true"/>
		</PropertyGroup>
	</FlowElementProperties>
</Definitions>