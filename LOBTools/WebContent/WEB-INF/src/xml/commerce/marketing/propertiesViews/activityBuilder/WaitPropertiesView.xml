<Definitions>
	<!---
		Properties view for the {@link cmc/marketing/WaitElementObject Wait trigger}.
	-->
	<FlowElementProperties definitionName="cmc/marketing/WaitProperties">
		<dependency localName="marketingResources" moduleName="cmc/marketing/MarketingResources"/>
		<PropertyGroup collapsable="false" name="group">
			<PropertyStepper helpText="${marketingResources.help_wait_timeToWait}" minimumValue="1" name="durationValue" promptText="${marketingResources.durationValue}" propertyName="durationValue" required="true"/>
			<PropertyCombobox name="durationUnits" promptText="${marketingResources.durationUnits}" propertyName="durationUnits" required="true"/>
		</PropertyGroup>
	</FlowElementProperties>
</Definitions>