<Definitions>
	<PropertyGroup collapsable="false" definitionName="cmc/marketing/AcctAmountSpentProperties" displayGrouping="true">
		<dependency localName="marketingResources" moduleName="cmc/marketing/MarketingResources"/>
		<PropertyCombobox objectPath="TopAndList/AcctAmountSpent" promptText="${marketingResources.cspAcctAmountSpent}" propertyName="template"/>
		<PropertyGroup collapsable="false" name="singleAcctAmountSpentGroup">
			<EnablementOrCondition conditionId="singleInput">
				<EnablementCondition conditionId="greaterThan" enablementValue="greaterThan" objectPath="TopAndList/AcctAmountSpent" propertyName="template"/>
				<EnablementCondition conditionId="lessThan" enablementValue="lessThan" objectPath="TopAndList/AcctAmountSpent" propertyName="template"/>
			</EnablementOrCondition>
			<PropertyCurrencyValueEditor objectPath="TopAndList/AcctAmountSpent/AcctAmountSpentAndOrList/AcctAmountSpentCondition" promptText="${marketingResources.customerSegment_acctAmountSpent}" propertyName="conditionValue" required="true"/>
		</PropertyGroup>
		<PropertyGroup collapsable="false" name="multiAcctAmountSpentGroup">
			<EnablementCondition conditionId="withinRange" enablementValue="between" objectPath="TopAndList/AcctAmountSpent" propertyName="template"/>
			<PropertyCurrencyValueEditor objectPath="TopAndList/AcctAmountSpent/AcctAmountSpentAndOrList/AcctAmountSpentCondition[conditionOperator=&gt;=]" promptText="${marketingResources.customerSegment_minimumAcctAmountSpent}" propertyName="conditionValue" required="true"/>
			<PropertyCurrencyValueEditor objectPath="TopAndList/AcctAmountSpent/AcctAmountSpentAndOrList/AcctAmountSpentCondition[conditionOperator=&lt;=]" promptText="${marketingResources.customerSegment_maximumAcctAmountSpent}" propertyName="conditionValue" required="true"/>
		</PropertyGroup>
	</PropertyGroup>
</Definitions>