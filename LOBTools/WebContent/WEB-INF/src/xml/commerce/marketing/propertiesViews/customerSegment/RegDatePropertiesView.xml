<Definitions>
	<PropertyGroup collapsable="false" definitionName="cmc/marketing/RegistrationDateProperties" displayGrouping="true">
		<dependency localName="marketingResources" moduleName="cmc/marketing/MarketingResources"/>
		<PropertyCombobox objectPath="TopAndList/RegistrationDate" promptText="${marketingResources.cspRegistrationDate}" propertyName="template"/>
		<PropertyGroup collapsable="false" name="singleChildrenGroup1">
			<EnablementOrCondition conditionId="singleInput">
				<EnablementCondition conditionId="withinDays" enablementValue="withinDays" objectPath="TopAndList/RegistrationDate" propertyName="template"/>
				<EnablementCondition conditionId="priorDays" enablementValue="priorDays" objectPath="TopAndList/RegistrationDate" propertyName="template"/>
			</EnablementOrCondition>
			<PropertyStepper minimumValue="0" objectPath="TopAndList/RegistrationDate/RegistrationDateAndOrList/RegistrationDaysCondition" promptText="${marketingResources.customerSegment_numOfDays}" propertyName="conditionValue" required="true"/>
		</PropertyGroup>
		<PropertyGroup collapsable="false" name="singleChildrenGroup2">
			<EnablementOrCondition conditionId="singleInput">
				<EnablementCondition conditionId="beforeDate" enablementValue="beforeDate" objectPath="TopAndList/RegistrationDate" propertyName="template"/>
				<EnablementCondition conditionId="afterDate" enablementValue="afterDate" objectPath="TopAndList/RegistrationDate" propertyName="template"/>
			</EnablementOrCondition>
			<PropertyDatePicker dateOnly="true" objectPath="TopAndList/RegistrationDate/RegistrationDateAndOrList/RegistrationDatesCondition" promptText="${marketingResources.customerSegment_Date}" propertyName="conditionValue" required="true"/>
		</PropertyGroup>
		<PropertyGroup collapsable="false" name="multiChildrenGroup">
			<EnablementCondition conditionId="betweenDates" enablementValue="betweenDates" objectPath="TopAndList/RegistrationDate" propertyName="template"/>
			<PropertyDatePicker dateOnly="true" objectPath="TopAndList/RegistrationDate/RegistrationDateAndOrList/RegistrationDatesCondition[conditionOperator=&gt;=]" promptText="${marketingResources.customerSegment_StartDate}" propertyName="conditionValue" required="true"/>
			<PropertyDatePicker dateOnly="true" objectPath="TopAndList/RegistrationDate/RegistrationDateAndOrList/RegistrationDatesCondition[conditionOperator=&lt;=]" promptText="${marketingResources.customerSegment_EndDate}" propertyName="conditionValue" required="true"/>
		</PropertyGroup>
	</PropertyGroup>
</Definitions>