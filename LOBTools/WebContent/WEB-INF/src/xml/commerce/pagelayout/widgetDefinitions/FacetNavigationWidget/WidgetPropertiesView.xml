<Definitions>
	<GridObjectProperties definitionName="cmc/pagelayout/WidgetProperties_FacetNavigationWidget">
		<dependency localName="pageLayoutResources" moduleName="cmc/pagelayout/PageLayoutResources"/>
		<PropertyPane>
			<PropertyGroup collapsable="false" groupTitle="${pageLayoutResources.widgetPropertiesPrompt}" name="widgetProperties">
				<PropertyInputText extendedHelpText="${pageLayoutResources.extendedHelpText_facetNavigationWidgetWidgetName}" name="${pageLayoutResources.widgetNamePrompt}" promptText="${pageLayoutResources.widgetNamePrompt}" propertyName="widgetName"/>
				<PropertyRadioGroup extendedHelpText="${pageLayoutResources.extendedHelpText_facetNavigationWidgetWidgetOrientation}" promptText="${pageLayoutResources.facetNavigationWidgetWidgetOrientationPrompt}" propertyName="xWidgetProp_widgetOrientation"/>
			</PropertyGroup>
			<PropertyGroup collapsable="false" groupTitle="${pageLayoutResources.widgetContentPrompt}" name="contentProperties">
				<PropertyStaticText text="${pageLayoutResources.facetNavigationWidgetContent}"/>
			</PropertyGroup>
		</PropertyPane>
	</GridObjectProperties>
</Definitions>