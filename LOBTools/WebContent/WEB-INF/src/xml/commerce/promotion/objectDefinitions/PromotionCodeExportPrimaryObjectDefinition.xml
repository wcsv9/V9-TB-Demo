<Definitions>
	<PrimaryObjectDefinition copyProtected="true" definitionName="cmc/promotion/BasePromotionCodeExportPrimaryObjectDefinition" displayName="${promotionResources.promotionCodeExportObjectName}" displayNameProperty="promotionExportName" headerIcon="promotionCodeExportHeaderIcon" helpLink="tasks/tprexportpromo.htm" icon="promotionCodeExportIcon" idProperty="promotionCodeExportId" isBaseDefinition="true" newDisplayName="${promotionResources.newPromotionCodeExportDisplayName}" objectGroups="PromotionCodeExportGroup" propertiesDefinition="cmc/promotion/PromotionCodeExportProperties" searchType="FindPromotionCodeExports" writeUsage="IBM_ManagePromotionTool">
		<dependency localName="promotionResources" moduleName="cmc/promotion/PromotionResources"/>
		<!--- The property for specifying the promotion code export name. -->
		<PropertyDefinition displayName="${promotionResources.promotionCodeExport_name}" maximumSize="254" propertyName="promotionExportName" required="true" type="string">
			<PropertyStringValidator invalidCharacters="&amp;&gt;&lt;&quot;?=#/$%\*~`!@^()+{}[]|';:.," validatorId="promotionCodeExportNameValidator"/>
		</PropertyDefinition>
		<!--- The property for displaying the promotionName -->
		<PropertyDefinition displayName="${promotionResources.promotionCodeExport_promotionName}" propertyName="promotionName" send="false"/>
		<!--- The property for displaying the promotionId -->
		<PropertyDefinition displayName="${promotionResources.promotionCodeExport_promotionId}" propertyName="promotionId" type="string"/>
		<!--- The property for displaying the summary of the promotion code export task -->
		<PropertyDefinition copyProtected="true" displayName="${promotionResources.promotionCodeExport_summary}" propertyName="summary" send="false"/>
		<!--- The property for displaying the status of the promotion code export task. Valid options include "Processing", "Failed", "Cancelled", and "Complete". -->
		<PropertyDefinition copyProtected="true" displayName="${promotionResources.promotionCodeExportStatus}" propertyName="status">
			<PropertyValue displayName="${promotionResources.promotionCodeExport_statusProcessing}" value="Processing"/>
			<PropertyValue displayName="${promotionResources.promotionCodeExport_statusFailed}" value="Failed"/>
			<PropertyValue displayName="${promotionResources.promotionCodeExport_statusCancelled}" value="Cancelled"/>
			<PropertyValue displayName="${promotionResources.promotionCodeExport_statusComplete}" value="Complete"/>
		</PropertyDefinition>
		<!-- Create service to create a new promotion code export task -->
		<CreateService url="/cmc/CreatePromotionCodeExport">
			<ServiceParam name="storeId"/>
			<ServiceParam name="promotionExportName" propertyName="promotionExportName"/>
			<ServiceParam name="promotionId" propertyName="promotionId"/>
		</CreateService>
		<!--- Delete service to delete the promotion code export object on the server.  -->
		<DeleteService url="/cmc/DeletePromotionCodeExport">
			<ServiceParam name="storeId" parameterName="storeId">
				<EnablementCondition checkObjectDefinition="true" conditionId="promotionCodeExportCondition" enablementValue="PromotionCodeExport" propertyName="objectType"/>
			</ServiceParam>
			<ServiceParam name="parentStoreId" parameterName="storeId" propertyName="objectStoreId">
				<EnablementCondition checkObjectDefinition="true" conditionId="promotionCodeExportCondition" enablementValue="InheritedPromotionCodeExport" propertyName="objectType"/>
			</ServiceParam>
			<ServiceParam name="promotionCodeExportId" propertyName="promotionCodeExportId"/>
		</DeleteService>
		<!-- Refresh service to reload the promotion code export details with the latest data in the server -->
		<RefreshService url="/cmc/GetPromotionCodeExport">
			<ServiceParam name="storeId" parameterName="storeId">
				<EnablementCondition checkObjectDefinition="true" conditionId="promotionCodeExportCondition" enablementValue="PromotionCodeExport" propertyName="objectType"/>
			</ServiceParam>
			<ServiceParam name="parentStoreId" parameterName="storeId" propertyName="objectStoreId">
				<EnablementCondition checkObjectDefinition="true" conditionId="promotionCodeExportCondition" enablementValue="InheritedPromotionCodeExport" propertyName="objectType"/>
			</ServiceParam>
			<ServiceParam name="promotionCodeExportId" propertyName="promotionCodeExportId"/>
		</RefreshService>
		<!--- Custom action defined to download the promotion code export.  -->
		<DownloadPromotionCodeExportClientAction displayName="${promotionResources.promotionCodeExport_downloadPromotionCodes}" package="cmc/promotion">
			<EnablementCondition conditionId="exportCompleted" enablementValue="Complete" propertyName="status"/>
		</DownloadPromotionCodeExportClientAction>
		<!--
			Child object definition for storing the download history of a promotion code export
		-->
		<ChildObjectDefinition baseDefinition="cmc/promotion/PromotionCodeExportDownloadHistory"/>
	</PrimaryObjectDefinition>

	<PrimaryObjectDefinition baseDefinition="cmc/promotion/BasePromotionCodeExportPrimaryObjectDefinition" creatable="false" definitionName="cmc/promotion/PromotionCodeExport" objectType="PromotionCodeExport"/>

	<PrimaryObjectDefinition baseDefinition="cmc/promotion/BasePromotionCodeExportPrimaryObjectDefinition" compatibleObjectTypes="PromotionCodeExport" creatable="false" definitionName="cmc/promotion/InheritedPromotionCodeExport" headerIcon="promotionCodeExportInheritedHeaderIcon" icon="promotionCodeExportInheritedIcon" objectType="InheritedPromotionCodeExport">
		<FalseEnablementCondition conditionId="promotionCodeExportCondition"/>
	</PrimaryObjectDefinition>

	<Xml name="template">
		<includeMCMetadata>false</includeMCMetadata>
	</Xml>

	<ChildObjectDefinition definitionName="cmc/promotion/PromotionCodeExportDownloadHistory" idProperty="userIdentifier" objectType="PromotionCodeExportDownloadHistory"/>
</Definitions>