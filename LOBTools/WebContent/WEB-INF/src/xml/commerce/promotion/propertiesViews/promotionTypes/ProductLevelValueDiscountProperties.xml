<Definitions>
	<PropertyGroup collapsable="false" definitionName="cmc/promotion/ProductLevelValueDiscountProperties">
		<dependency localName="promotionResources" moduleName="cmc/promotion/PromotionResources"/>
		<EnablementCondition conditionId="promotionType" enablementValue="ProductLevelValueDiscount" propertyName="promotionType"/>
		<PropertyGroup groupTitle="${promotionResources.promotion_purchaseConditionAndRewardTitle}" name="purchaseConditionAndRewardGroup" open="true">
			<PropertyCombobox objectPath="ProductLevelValueDiscountPurchaseCondition/Identifier_PaymentType" promptText="${promotionResources.promotion_paymentType}" propertyName="PaymentType"/>
			<PropertyCheckbox helpText="${promotionResources.promotion_siteWideProduct_helpText}" objectPath="ProductLevelValueDiscountPurchaseCondition" promptText="${promotionResources.promotion_siteWide}" propertyName="siteWide"/>
			<PropertyChildListEditor helpText="${promotionResources.promotion_Product_Promotion_SKU_Search_helpText}" listDefinition="cmc/promotion/ProductElementTypeGrid" name="catalogEntry" objectPath="ProductLevelValueDiscountPurchaseCondition" objectTypes="Identifier_CatalogEntry,Identifier_InheritedCatalogEntry" promptText="${promotionResources.promotion_Select_Catalog_Entry}" validatorTypes="reqCatValidator,reqIncCatValidator,reqNoIncCatValidator"/>
			<PropertyChildListEditor helpText="${promotionResources.promotion_Targeting_Attribute_Filter_Rule_helpText}" listDefinition="cmc/promotion/CatalogEntryAttributeRuleGrid" name="AttributesRule" objectPath="ProductLevelValueDiscountPurchaseCondition" objectTypes="CatalogEntryAttributeRule" promptText="${promotionResources.promotion_Targeting_Attribute_Filter_Rule}"/>
			<PropertyCombobox objectPath="ProductLevelValueDiscountPurchaseCondition" promptText="${promotionResources.promotionElement_Currency}" propertyName="Currency" required="true"/>
			<PropertyRadioGroup objectPath="ProductLevelValueDiscountPurchaseCondition" promptText="${promotionResources.promotionMinimumPurchaseConditionType}" propertyName="MinimumPurchaseType" required="true"/>
			<PropertyGroup name="promotionMinimumPurchaseConditionType1" open="true" showHeader="false">
				<EnablementCondition conditionId="promotionMinimumPurchaseConditionType1" enablementValue="Quantity" objectPath="ProductLevelValueDiscountPurchaseCondition" propertyName="MinimumPurchaseType"/>
				<PropertyChildListEditor listDefinition="cmc/promotion/PVDRangeGrid" name="defaultRange" objectPath="ProductLevelValueDiscountPurchaseCondition" objectTypes="ProductLevelFixedAmountOffDiscountRange" promptText="${promotionResources.promotion_Minimum_purchase_condition}" required="true"/>
			</PropertyGroup>
			<PropertyGroup name="promotionMinimumPurchaseConditionType2" open="true" showHeader="false">
				<EnablementCondition conditionId="promotionMinimumPurchaseConditionType2" enablementValue="Amount" objectPath="ProductLevelValueDiscountPurchaseCondition" propertyName="MinimumPurchaseType"/>
				<PropertyChildListEditor listDefinition="cmc/promotion/PVDRangeGrid2" name="defaultRange" objectPath="ProductLevelValueDiscountPurchaseCondition" objectTypes="ProductLevelFixedAmountOffDiscountRange" promptText="${promotionResources.promotion_Minimum_purchase_condition}" required="true"/>
			</PropertyGroup>
		</PropertyGroup>
	</PropertyGroup>

	<!---
		This grid displays the contents and characteristics of a list of {@link cmc/promotion/ProductLevelFixedAmountOffDiscountRangeObjectDefinition ProductLevelFixedAmountOffDiscountRange promotion element sub type}
		associated with the ProductLevelValueDiscount promotion type.
	-->
	<ObjectGrid definitionName="cmc/promotion/PVDRangeGrid" preferenceKey="proPVDRangeGrid">
		<dependency localName="promotionResources" moduleName="cmc/promotion/PromotionResources"/>
		<GridNumeric editable="true" name="lowerBound" propertyName="LowerBound" required="true" text="${promotionResources.promotion_Minimum_purchase_quantityTitle}" visible="true" width="200"/>
		<GridCurrency appendCurrencyCodeToHeader="false" cloneEnabled="false" editable="true" name="amountOff" propertyName="AmountOff" required="true" setPropertyNameToCurrencyCode="false" text="${promotionResources.promotionElement_Amount_OffTitle}" visible="true" width="200"/>
	</ObjectGrid>

	<!---
		This grid displays the contents and characteristics of a list of {@link cmc/promotion/ProductLevelFixedAmountOffDiscountRangeObjectDefinition ProductLevelFixedAmountOffDiscountRange promotion element sub type}
		associated with the ProductLevelValueDiscount promotion type.
	-->
	<ObjectGrid definitionName="cmc/promotion/PVDRangeGrid2" preferenceKey="proPVDRangeGrid2">
		<dependency localName="promotionResources" moduleName="cmc/promotion/PromotionResources"/>
		<GridCurrency appendCurrencyCodeToHeader="false" cloneEnabled="false" editable="true" name="lowerBound" propertyName="LowerBound" required="true" setPropertyNameToCurrencyCode="false" text="${promotionResources.promotion_Minimum_purchase_amountTitle}" visible="true" width="200"/>
		<GridCurrency appendCurrencyCodeToHeader="false" cloneEnabled="false" editable="true" name="amountOff" propertyName="AmountOff" required="true" setPropertyNameToCurrencyCode="false" text="${promotionResources.promotionElement_Amount_OffTitle}" visible="true" width="200"/>
	</ObjectGrid>
</Definitions>