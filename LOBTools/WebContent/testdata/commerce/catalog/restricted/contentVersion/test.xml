<testcase>

	<!-- Open Catalog tool -->
	<action name="cmc/automation/AutoOpenToolAction">
		<param name="toolId" value="catalogManagement"/>
	</action>
	
	<!-- Select store -->
	<action name="cmc/automation/AutoSelectStoreAction">
		<param name="storeKey" value="storeIdentifier"/>
	</action>

	<!-- Load Test for Category -->
	<action name="cmc/automation/AutoRunTestCaseAction">
		<param name="url" value="/testdata/commerce/catalog/restricted/contentVersion/testCategory.xml"/>
	</action>

	<!-- Load Test for Sales Category -->
	<action name="cmc/automation/AutoRunTestCaseAction">
		<param name="url" value="/testdata/commerce/catalog/restricted/contentVersion/testSalesCategory.xml"/>
	</action>
	
	<!-- Load Test for Product -->
	<action name="cmc/automation/AutoRunTestCaseAction">
		<param name="url" value="/testdata/commerce/catalog/restricted/contentVersion/testProduct.xml"/>
	</action>
	
	<!-- Load Test for Product SKU -->
	<action name="cmc/automation/AutoRunTestCaseAction">
		<param name="url" value="/testdata/commerce/catalog/restricted/contentVersion/testProductSKU.xml"/>
	</action>
	
	<!-- Load Test for Bundle -->
	<action name="cmc/automation/AutoRunTestCaseAction">
		<param name="url" value="/testdata/commerce/catalog/restricted/contentVersion/testBundle.xml"/>
	</action>

	<!-- Load Test for Kit -->
	<action name="cmc/automation/AutoRunTestCaseAction">
		<param name="url" value="/testdata/commerce/catalog/restricted/contentVersion/testKit.xml"/>
	</action>

	<!-- Load Test for Sales Catalog -->
	<action name="cmc/automation/AutoRunTestCaseAction">
		<param name="url" value="/testdata/commerce/catalog/restricted/contentVersion/testSalesCatalog.xml"/>
	</action>


</testcase>