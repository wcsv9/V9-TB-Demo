<testcase>
	<!-- Set up the data for Installment BVT -->
	
	<!-- Set a store value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="installmentBVTStoreIdentifier"/>
		<param name="value" value="AuroraBVT"/>
	</action>
	
	<!-- Assign a installment name value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_installment_name"/>
		<param name="value" value="bvt_rule"/>
	</action>
	
	<!-- Assign a installment priority value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_installment_priority"/>
		<param name="value" value="1000"/>
	</action>
	
	<!-- Assign a installment startDate value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_installment_startDate"/>
		<param name="value" value="2010-01-05T12:00:00.001"/>
	</action>
	
	<!-- Assign a installment endDate value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_installment_endDate"/>
		<param name="value" value="2010-01-06T12:00:00.001"/>
	</action>
	
	<!-- Generate a value for installment number property for created-->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_installment_installmentoption_installmentNumber"/>
		<param name="value" value="2"/>
	</action>

	<!-- Generate a value for installment rates property for created-->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_installment_installmentoption_rate"/>
		<param name="value" value="0.00000"/>
	</action>

	<!-- Generate a value for installment minimum amount property for created-->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_installment_installmentoption_minimumAmt"/>
		<param name="value" value="10.00000"/>
	</action>

	<!-- Generate a value for the currency property for created. -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_installment_installmentoption_Currency"/>
		<param name="value" value="USD"/>
	</action>

</testcase>