<testcase>
	<!-- ============================================================== -->
	<!-- =======Set up the data for Asset store Page Layout tool======= -->
	
	<!-- Set a store value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="pglBVTStoreIdentifier"/>
		<param name="value" value="AuroraBVT"/>
	</action>
	
	<!-- Assign a category page name value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_categoryPg_name"/>
		<param name="value" value="Dairy"/>
	</action>
	
	<!-- Assign a category page layout name value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_categoryPgLayout_name"/>
		<param name="value" value="SubCategoryPage"/>
	</action>
	
	<!-- Assign the reference object between the page and the page layout object value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_categoryPLAssociationReference_ObjectName"/>
		<param name="value" value="InheritedCategoryPageLayoutAssociationReferencedInheritedCategoryPageLayouts"/>
	</action>
	
	<!-- Assign a page layout assignment priority value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_pglassignment_priority"/>
		<param name="value" value="1"/>
	</action>
	
	<!-- Assign a page layout startDate value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_pgl_startDate"/>
		<param name="value" value="2012-07-01T12:00:00.001"/>
	</action>
	
	<!-- Assign a page layout endDate value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_pgl_endDate"/>
		<param name="value" value="2012-12-06T12:00:00.001"/>
	</action>
	
	<!-- Assign a page layout assignment priority value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_pglassignment_modpriority"/>
		<param name="value" value="2"/>
	</action>
	
	<!-- Assign a page layout startDate value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_pgl_modstartDate"/>
		<param name="value" value="2012-07-05T12:00:00.001"/>
	</action>
	
	<!-- Assign a page layout endDate value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_pgl_modendDate"/>
		<param name="value" value="2012-12-11T12:00:00.001"/>
	</action>
	
	<!-- Assign a page layout date length value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="pgl_DateLength"/>
		<param name="value" value="23"/>
	</action>

</testcase>