	</action>
	
	<!-- Generate Web Activity Modify Values -->
	<!-- Generate a value for the name property -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="webActivityNameModify"/>
		<param name="valuePrefix" value="webActivityNameBVTModify-"/>
	</action>
	
	<!-- Call Custom Setup -->
	<action name="cmc/automation/AutoRunTestCaseAction">
		<param name="url" value="/testdata/commerce/marketing/webActivity/testManualSetupExt.xml"/>
	</action>
	

