	</action>
	
	<!-- Generate value for page layout endDate -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_pl_modendDate"/>
		<param name="value" value="2013-12-11T12:00:00.001"/>
