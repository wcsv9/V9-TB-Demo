	</action>
	
	<!--  Generate value for modified content page name -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_contentPg_name_modified"/>
		<param name="value" value="bvtContentPageModified"/>
	</action>

    <!-- ================= Create PageLayout setup ==================  -->		
	
	<!--  Generate value for PageLayoutTemplate name -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="contentPgTemplate_name"/>
