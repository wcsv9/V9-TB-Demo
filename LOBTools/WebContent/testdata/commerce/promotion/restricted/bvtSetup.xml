<testcase>
	<!-- Set up the data for Promotion BVT -->
	
	<!-- Set a store value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="promotionBVTStoreIdentifier"/>
		<param name="value" value="Aurora"/>
	</action>
	
	<!-- Assign a promotion type value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_promotion_type"/>
		<param name="value" value="OrderLevelPercentDiscount"/>
	</action>
	
	<!-- Assign a promotion name value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_promotion_name"/>
		<param name="value" value="bvt_promotion"/>
	</action>
	
	<!-- Assign a promotion priority value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_promotion_priority"/>
		<param name="value" value="1000"/>
	</action>
	
	<!-- Assign a promotion lower bound value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_promotion_lower_bound"/>
		<param name="value" value="20"/>
	</action>
	
	<!-- Assign a promotion percentage value -->
	<action name="cmc/automation/AutoSetValueAction">
		<param name="valueKey" value="bvt_promotion_percentage"/>
		<param name="value" value="15"/>
	</action>

</testcase>