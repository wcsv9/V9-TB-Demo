<_config:DataLoadConfiguration
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.ibm.com/xmlns/prod/commerce/foundation/config ../xsd/wc-dataload.xsd" 
	xmlns:_config="http://www.ibm.com/xmlns/prod/commerce/foundation/config">

	<_config:DataLoadEnvironment configFile="wc-dataload-env.xml" />

    <_config:LoadOrder commitCount="100" maxError="1" dataLoadMode="Update" >
	
		<_config:property name="batchSize" value="${batchSize, 100}" />
  	    <_config:property name="cleanupUploadFiles" value="true" />
		
		<_config:LoadItem name="MassLoad" businessObjectConfigFile="wc-loader-massload.xml" >
			<_config:DataSourceLocation location="${infile}" />
		</_config:LoadItem>
		
    </_config:LoadOrder>

</_config:DataLoadConfiguration>
