<_config:DataloadBusinessObjectConfiguration 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.ibm.com/xmlns/prod/commerce/foundation/config ../../../../xml/config/xsd/wc-dataload-businessobject.xsd" 
	xmlns:_config="http://www.ibm.com/xmlns/prod/commerce/foundation/config">

  <_config:DataLoader className="com.ibm.commerce.foundation.dataload.BusinessObjectLoader" >
  
    <_config:DataReader className="com.ibm.commerce.foundation.dataload.datareader.CSVReader"
          firstLineIsHeader="true" useHeaderAsColumnName="true" />
        
    <_config:BusinessObjectBuilder className="com.ibm.commerce.foundation.dataload.businessobjectbuilder.BaseBusinessObjectBuilder"
      packageName="com.ibm.commerce.content.facade.datatypes.ContentPackage" dataObjectType="AttachmentType" >
    
      <_config:DataMapping>
        <_config:mapping xpath="AttachmentIdentifier/ExternalIdentifier/Identifier" value="attachmentIdentifier" />
        <_config:mapping xpath="AttachmentAsset[0]/AttachmentAssetPath" value="assetPath" />
        <_config:mapping xpath="AttachmentAsset[0]/DirectoryPath" value="directoryPath" />
        <_config:mapping xpath="AttachmentAsset[0]/MimeType" value="mimeType" />
        <_config:mapping xpath="" value="delete" deleteValue="1" />
      </_config:DataMapping>
      
      <_config:BusinessObjectMediator className="com.ibm.commerce.marketing.dataload.mediator.AttachmentAssetMediator"
      	componentId="com.ibm.commerce.content" />

     </_config:BusinessObjectBuilder>
  </_config:DataLoader>

</_config:DataloadBusinessObjectConfiguration>
