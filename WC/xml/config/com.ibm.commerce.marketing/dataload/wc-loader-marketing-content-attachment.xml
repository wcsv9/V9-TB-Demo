<_config:DataloadBusinessObjectConfiguration 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.ibm.com/xmlns/prod/commerce/foundation/config ../../../../xml/config/xsd/wc-dataload-businessobject.xsd" 
	xmlns:_config="http://www.ibm.com/xmlns/prod/commerce/foundation/config">

  <_config:DataLoader className="com.ibm.commerce.foundation.dataload.BusinessObjectLoader" >
  
    <_config:DataReader className="com.ibm.commerce.foundation.dataload.datareader.CSVReader"
          firstLineIsHeader="true" useHeaderAsColumnName="true" />
        
    <_config:BusinessObjectBuilder className="com.ibm.commerce.foundation.dataload.businessobjectbuilder.BaseBusinessObjectBuilder"
      packageName="com.ibm.commerce.marketing.facade.datatypes.MarketingPackage" dataObjectType="MarketingContentType" >
    
      <_config:DataMapping>
        <_config:mapping xpath="MarketingContentIdentifier/ExternalIdentifier/Name" value="contentName" />
        <_config:mapping xpath="Attachment/AttachmentIdentifier/ExternalIdentifier/Identifier" value="attachmentIdentifier" />
        <_config:mapping xpath="Attachment/AttachmentUsage/UsageName" value="usageName" />
        <_config:mapping xpath="Attachment/DisplaySequence" value="sequence" />
        <_config:mapping xpath="Attachment/AttachmentReferenceDescription[0]/Name" value="relationName" />
        <_config:mapping xpath="Attachment/AttachmentReferenceDescription[0]/ShortDescription" value="relationShortDescription" />
        <_config:mapping xpath="Attachment/AttachmentReferenceDescription[0]/LongDescription" value="relationLongDescription" />
        <_config:mapping xpath="" value="delete" deleteValue="1" />
      </_config:DataMapping>

      <_config:BusinessObjectMediator className="com.ibm.commerce.marketing.dataload.mediator.MarketingContentAttachmentMediator"
      	componentId="com.ibm.commerce.marketing" />

     </_config:BusinessObjectBuilder>
  </_config:DataLoader>  

</_config:DataloadBusinessObjectConfiguration>
