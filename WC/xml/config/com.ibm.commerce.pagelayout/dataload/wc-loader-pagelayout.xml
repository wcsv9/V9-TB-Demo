<_config:DataloadBusinessObjectConfiguration
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.ibm.com/xmlns/prod/commerce/foundation/config ../../../../xml/config/xsd/wc-dataload-businessobject.xsd"
  xmlns:_config="http://www.ibm.com/xmlns/prod/commerce/foundation/config">

  <_config:DataLoader className="com.ibm.commerce.foundation.dataload.BusinessObjectLoader" >

    <_config:DataReader className="com.ibm.commerce.foundation.dataload.datareader.CSVReader"
                        firstLineIsHeader="true"
                        useHeaderAsColumnName="true" >
    </_config:DataReader>

    <_config:BusinessObjectBuilder className="com.ibm.commerce.foundation.dataload.businessobjectbuilder.BaseBusinessObjectBuilder"
                                   packageName="com.ibm.commerce.pagelayout.facade.datatypes.PageLayoutPackage" dataObjectType="LayoutType" >
      <_config:DataMapping>
        <_config:mapping xpath="LayoutIdentifier/UniqueID"                                value="LayoutUniqueID" />
        <_config:mapping xpath="LayoutIdentifier/ExternalIdentifier/Name"                 value="LayoutName" />

        <_config:mapping xpath="TemplateIdentifier/UniqueID"                              value="TemplateUniqueID" />
        <_config:mapping xpath="TemplateIdentifier/ExternalIdentifier/Name"               value="TemplateName" />

        <_config:mapping xpath="layoutGroup"                                              value="PageGroup" />
        <_config:mapping xpath="AdminDescription"                                         value="Description" />
        <_config:mapping xpath="deviceClass"                                              value="DeviceClass" />
        <_config:mapping xpath="default"                                                  value="IsDefault" />
        <_config:mapping xpath="template"                                                 value="IsTemplate" />
        <_config:mapping xpath="state"                                                    value="State" />
        <_config:mapping xpath="managingTool"                                             value="ManagingTool" />
        <_config:mapping xpath="PageLocation[0]/schedule/priority"                        value="Priority" />
        <_config:mapping xpath="PageLocation[0]/schedule/StartDate"                       value="StartDate" />
        <_config:mapping xpath="PageLocation[0]/schedule/EndDate"                         value="EndDate" />

        <!-- The Delete indicator -->
        <_config:mapping xpath=""                                                         value="Delete" deleteValue="1" />
      </_config:DataMapping>
      <_config:BusinessObjectMediator className="com.ibm.commerce.pagelayout.dataload.mediator.LayoutMediator" componentId="com.ibm.commerce.pagelayout" />
    </_config:BusinessObjectBuilder>

  </_config:DataLoader>
</_config:DataloadBusinessObjectConfiguration>