    <!-- The following is a highly optimized version of preprocessing TI_ATTR.
         To understand the original logic, please refer to the corresponding commented version below this one.
         This optimization is to remove UNION on two complex joins in preprocessing this temporary table.
         In order to achieve this, the modification of TI_CATENTREL is required.  
     -->
    <_config:data-processing-config processor="com.ibm.commerce.foundation.dataimport.preprocess.AttributeDataPreProcessor" fetchSize="500" batchSize="500">
        <_config:table definition="CREATE TABLE TI_ATTR_#INDEX_SCOPE_TAG#_#lang_tag# (CATENTRY_ID NUMBER NOT NULL, ATTRS VARCHAR2(32767), ATTRI VARCHAR2(32767), ATTRF VARCHAR2(32767), SRCHS VARCHAR2(32767), SRCHI VARCHAR2(32767), SRCHF VARCHAR2(32767), PRIMARY KEY (CATENTRY_ID))" name="TI_ATTR_#INDEX_SCOPE_TAG#_#lang_tag#" />
        <_config:query sql="select distinct c.catentry_id_parent CATENTRY_ID,
                                            attrvaldesc.attr_id attr_id,
                                            attrvaldesc.stringvalue attr_stringvalue,
                                            attrvaldesc.integervalue attr_integervalue,
                                            attrvaldesc.floatvalue attr_floatvalue,
                                            af.attrtype_id attrtype_id,
                                            af.srchfieldname attr_name,
                                            attr.searchable
                            from catentryattr,
                                 attrvaldesc,
                                 TI_CATENTREL_#INDEX_SCOPE_TAG# c,
                                 attrdictsrchconf af,
                                 attr
                            where catentryattr.catentry_id=c.catentry_id_child
                              and catentryattr.attr_id=af.attr_id
                              and attrvaldesc.attrval_id=catentryattr.attrval_id
                              and attrvaldesc.language_id=?language_id?
                              and af.attr_id=attr.attr_id
                              and af.mastercatalog_id=?master_catalog_id?
                            order by catentry_id, attrtype_id"/>
        <_config:mapping>
              <_config:key queryColumn="CATENTRY_ID" tableColumn="CATENTRY_ID"/>
              <_config:column-mapping>
                <_config:row-column-mapping>
                    <_config:row-column-name attrNameColName="attr_id" attrValueColName="attr_id"/>
                </_config:row-column-mapping>
              </_config:column-mapping>
        </_config:mapping>
        <_config:property name="split_by" value="||"/>
        
        <!-- grouping query will be used if the "-grouping true" is passed in when running the di-preprocess utility, or when IndexResultGrouping search property is set when preprocessing through the runtime, i.e. preview or index schedule command.
            1. It will disable rolling up of defining attribute dictionary attribute values to product beans.
            2. It will enable rolling down of descriptive attributes into Item beans.
        -->
        <_config:property name="groupingQuery" value="select distinct c.catentry_id_child CATENTRY_ID,
                                                                      attrvaldesc.attr_id attr_id,
                                                                      attrvaldesc.stringvalue attr_stringvalue,
                                                                      attrvaldesc.integervalue attr_integervalue,
                                                                      attrvaldesc.floatvalue attr_floatvalue,
                                                                      af.attrtype_id attrtype_id,
                                                                      af.srchfieldname attr_name,
                                                                      attr.searchable
                                                      from catentryattr,
                                                           attrvaldesc,
                                                           TI_CATENTREL_#INDEX_SCOPE_TAG# c,
                                                           attrdictsrchconf af,
                                                           attr
                                                      where c.catentry_id_parent = catentryattr.catentry_id
                                                        and attrvaldesc.attrval_id = catentryattr.attrval_id
                                                        and attrvaldesc.language_id= ?language_id?
                                                        and catentryattr.attr_id = af.attr_id
                                                        and af.attr_id = attr.attr_id
                                                        and af.mastercatalog_id = ?master_catalog_id?
                                                        and (c.catentry_id_parent = c.catentry_id_child or (select count(*)
                                                                                                            from catentryattr
                                                                                                            where catentry_id = c.catentry_id_child
                                                                                                              and attr_id = catentryattr.attr_id
                                                                                                              and usage = 2) = 0)
                                                      order by catentry_id, attrtype_id" />
    </_config:data-processing-config>
    
