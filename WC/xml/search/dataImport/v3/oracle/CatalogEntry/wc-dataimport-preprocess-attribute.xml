<_config:DIHPreProcessConfig xmlns:_config="http://www.ibm.com/xmlns/prod/commerce/foundation/config" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.ibm.com/xmlns/prod/commerce/foundation/config ../../xsd/wc-dataimport-preprocess.xsd ">

    <!-- The following is a highly optimized version of preprocessing TI_CATENTREL.
         To understand the original logic, please refer to the corresponding commented version below this one.
         This optimization is to remove UNION on two complex joins in preprocessing TI_ATTR.
         Both products and SKUs were added self-reference records into this temporary table.  
     -->
    <_config:data-processing-config processor="com.ibm.commerce.foundation.dataimport.preprocess.StaticAttributeDataPreProcessor" fetchSize="500" batchSize="500">
        <_config:table definition="create table TI_CATENTREL_#INDEX_SCOPE_TAG# (combinekey VARCHAR(50) not null, catentry_id_parent NUMBER not null, catentry_id_child NUMBER not null,  PRIMARY KEY (combinekey))" name="TI_CATENTREL_#INDEX_SCOPE_TAG#"/>
        <_config:query sql="(select a.catentry_id_parent ||'_'|| a.catentry_id_child combinekey,
                                    a.catentry_id_parent catentry_id_parent,
                                    a.catentry_id_child catentry_id_child
                             from catentrel a, 
                                  ti_catentry_#INDEX_SCOPE_TAG# b, 
                                  catentry c 
                             where a.catentry_id_parent=b.catentry_id 
                               and c.catentry_id=a.catentry_id_child 
                               and c.MARKFORDELETE=0 
                               and a.catreltype_id not in ('DK_PDK','PDK_COMPONENT'))
                            UNION
                            (select a.catentry_id || '_' || a.catentry_id combinekey,
                                    a.catentry_id catentry_id_parent,
                                    a.catentry_id catentry_id_child
                             from ti_catentry_#INDEX_SCOPE_TAG# a)"/>
        <_config:mapping>
            <_config:key queryColumn="combinekey" tableColumn="combinekey"/>
            <_config:column-mapping>
                <_config:column-column-mapping>
                    <_config:column-column queryColumn="catentry_id_parent" tableColumn="catentry_id_parent" />
                    <_config:column-column queryColumn="catentry_id_child" tableColumn="catentry_id_child" />
                </_config:column-column-mapping>
            </_config:column-mapping>
        </_config:mapping>            
    </_config:data-processing-config>

