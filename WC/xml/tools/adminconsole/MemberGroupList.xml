<action resourceBundle="adminconsole.AdminConsoleNLS"
        formName="memberGroupForm"
        helpKey="AC.access.groupsGeneral.Help"
       >

 	<parameter
        	listsize="20"
        	startindex="0"
		resultssize="0"
	/>
	
	<scrollcontrol title="memberGroupListTitle"
		display="true"/>
	
	
	<controlpanel
        	display="true"/>
  	


	<button>
  		<menu name="newButton"
        		action="basefrm.newMemberGroup()" />
        		
  		<menu name="changeButton"
        		action="basefrm.changeMemberGroup()"   
        		selection="single" />
        		
  		<menu name="deleteButton"
        		action="basefrm.deleteMemberGroup()"
        		selection="multiple" />

  		<menu name="ShowActionsButtonName"
    			action="basefrm.doShowActions()"
    			selection="single" />

  		<menu name="ShowResourcesButtonName"
   			action="basefrm.doShowResources()"
    			selection="single" />

  		<menu name="ShowPoliciesButtonName"
   			action="basefrm.doShowPolicies()"
    			selection="single" />
    	</button>

</action>