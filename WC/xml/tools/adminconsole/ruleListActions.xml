<action resourceBundle="adminconsole.rulesNLS"
	formName="ruleForm"
	helpKey="AC.rules.ruleServiceList.Help">

	<parameter listsize="20"
		startindex="0"
		resultssize="0"
		orderby="SETCNOTE" />

	<scrollcontrol title="RuleListHeading"
		display="true" />

	<controlpanel display="true" />

	<button>
		<menu name="addServiceButton"
			action="basefrm.addService()" />
		<menu name="changeButton"
			action="basefrm.editService()"
			selection="single" />
		<menu name="refreshButton"
			action="basefrm.refreshService()"
			selection="single" />
		<menu name="startButton"
			action="basefrm.enableService()"
			selection="single" />
		<menu name="stopButton"
			action="basefrm.disableService()"
			selection="single" />
		<menu name="statusButton"
			action="basefrm.statusRequest()"
			selection="single" />
		<menu name="viewButton"
			action="basefrm.viewLastRequest()"
			selection="single" />
		<menu name="removeButton"
			action="basefrm.removeService()"
			selection="single" />
	</button>
</action>
