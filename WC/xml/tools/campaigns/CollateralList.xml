<action resourceBundle="campaigns.campaignsRB"
	formName="collateralForm"
	helpKey="MC.campaigns.CollateralList.Help">

	<parameter listsize="20"
		startindex="0"
		resultssize="0"
		orderby="name" />

	<scrollcontrol title="collateralListTitle"
		display="true" />

	<controlpanel display="true" />

	<button>
		<menu name="new"
			action="basefrm.newCollateral()" />
		<menu name="properties"
			action="basefrm.collateralProperties()"
			selection="single" />
		<menu name="summary"
			action="basefrm.summaryCollateral()"
			selection="single" />
		<menu name="delete"
			action="basefrm.deleteCollateral()"
			selection="multiple" />
		<menu name="findEllipsis"
			action="basefrm.findCollateral()" />
	</button>

</action>