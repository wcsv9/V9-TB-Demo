<action resourceBundle="campaigns.campaignsRB"
        formName="contentSpotForm"
        helpKey="MC.campaigns.ContentSpotList.Help">

  <parameter listsize="20"
             startindex="0"
             resultssize="0"
             orderby="name" />

  <scrollcontrol title="contentSpotListTitle"
                 display="true" />

  <controlpanel display="true" />

  <button>
    <menu name="new"
          action="basefrm.newContentSpot()" />
    <menu name="properties"
          action="basefrm.changeContentSpot()"
          selection="single" />
    <menu name="summary"
          action="basefrm.summaryContentSpot()"
          selection="single" />
    <menu name="delete"
          action="basefrm.deleteContentSpot()"
          selection="multiple" />
  </button>

</action>
