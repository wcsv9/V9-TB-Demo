<action resourceBundle="campaigns.campaignsRB"
        formName="contentSpotForm"
        helpKey="MC.campaigns.ContentSpotDetail.Help">

  <parameter listsize="20"
             startindex="0"
             resultssize="0" />

  <scrollcontrol title="contentSpotScheduleListTitle"
                 display="false" />

  <controlpanel display="false" />

  <button>
    <menu name="new"
          action="basefrm.newCollateral()" />
    <menu name="properties"
          action="basefrm.changeCollateral()"
          selection="single" />
    <menu name="summary"
          action="basefrm.summaryCollateral()"
          selection="single" />
    <menu name="addnoellipsis"
          action="basefrm.addCollateral()" />
    <menu name="moveup"
          action="basefrm.moveUpCollateral()"
          selection="multiple" />
    <menu name="movedown"
          action="basefrm.moveDownCollateral()"
          selection="multiple" />
    <menu name="remove"
          action="basefrm.removeSchedule()"
          selection="multiple" />
  </button>

</action>
