        action="top.setContent(basefrm.getListTitle(), basefrm.constructURL('/webapp/wcs/tools/servlet/NewDynamicListView?state=ClosedList&amp;ActionXMLFile=contract.ContractList&amp;cmd=ContractListView&amp;accountId=' + basefrm.getAccountId()), false)" />
  <view name="CancelledList"
        action="top.setContent(basefrm.getListTitle(), basefrm.constructURL('/webapp/wcs/tools/servlet/NewDynamicListView?state=CancelledList&amp;ActionXMLFile=contract.ContractList&amp;cmd=ContractListView&amp;accountId=' + basefrm.getAccountId()), false)" />

  <jsFile src="/wcs/javascript/tools/common/Util.js" />
  <jsFile src="/wcs/javascript/tools/common/DateUtil.js" />

</action>
