        action="top.setContent(basefrm.getListTitle(), basefrm.constructURL('/webapp/wcs/tools/servlet/NewDynamicListView?state=ActivatedList&amp;ActionXMLFile=contract.ContractList&amp;cmd=ContractListView&amp;accountId=' + basefrm.getAccountId()), false)" />
