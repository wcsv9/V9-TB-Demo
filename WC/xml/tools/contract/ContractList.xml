<action resourceBundle="contract.contractRB"
   formName = "ContractListFORM"
        helpKey="MC.contract.ContractList.Help"
>

  <parameter
         listsize="22"
        startindex="0"
        endindex="0"
        orderby="name"
        state="AllList"
        accountId=""
        SubmitErrorStatus=""
        contractUsage="1"
        searchMode="0"
        contractSearchName=""
        contractNameFilter=""
        contractSearchShortDesc=""
        contractSearchShortDescFilter=""
        contractSearchStoreName=""
        contractSearchStoreNameFilter=""
   />

  <scrollcontrol
        title="contractListTitle"
   display="true"/>


  <controlpanel
        display="true"/>


  <button>
        <menu name="newContractList"
              action="basefrm.newContract()"
              users="salesMgr actRep seller siteAdmin" />

   <menu name="import"
              action="basefrm.importContract()"
              users="salesMgr actRep seller siteAdmin" />

     <menu name="version"
             action="basefrm.versionContract()"
          selection="single"
              users="salesMgr actRep seller siteAdmin" />

     <menu name="change"
             action="basefrm.changeContract()"
          selection="single"
              users="salesMgr actRep seller siteAdmin" />

     <menu name="submit"
             action="basefrm.submitContract()"
          selection="single"
              users="salesMgr actRep seller siteAdmin" />

     <menu name="deploy"
             action="basefrm.deployContract()"
          selection="single"
              users="salesMgr seller siteAdmin" />
<!--
     <menu name="deployToStore"
             action="basefrm.deployContractToStore()"
          selection="single"
              users="salesMgr seller siteAdmin" />
-->
     <menu name="updateCatalogFilter"
             action="basefrm.filterContract()"
          selection="single"
              users="salesMgr actRep seller siteAdmin" />
              
     <!--For Extended TermCondition-->
     <menu name="updateExtendedTermCondition"
             action="basefrm.updateExtendedTermCondition()"
          selection="single"
              users="salesMgr actRep seller siteAdmin" />              

     <menu name="resume"
             action="basefrm.activateContract()"
          selection="single"
              users="salesMgr actRep seller siteAdmin" />

     <menu name="suspend"
             action="basefrm.deactivateContract()"
          selection="single"
              users="salesMgr actRep seller siteAdmin" />

     <menu name="view"
             action="basefrm.viewContract()"
          selection="single"
              users="salesMgr actRep cusRep cusSup seller siteAdmin" />

        <menu name="export"
              action="basefrm.exportContract()"
          selection="single"
              users="salesMgr actRep seller siteAdmin" />

     <menu name="reports"
             action="basefrm.reportContract()"
          selection="single"
              users="salesMgr actRep seller siteAdmin" />

     <menu name="copy"
             action="basefrm.copyContract()"
          selection="single"
              users="salesMgr actRep seller siteAdmin" />

     <menu name="cancel"
             action="basefrm.cancelContract()"
          selection="single"
              users="salesMgr actRep seller siteAdmin" />

     <menu name="delete"
             action="basefrm.deleteContract()"
          selection="multiple"
              users="salesMgr actRep seller siteAdmin" />

     <menu name="find"
             action="basefrm.findContract()"
              users="salesMgr actRep cusRep cusSup seller siteAdmin" />

     <menu name="refresh"
             action="basefrm.refreshContract()"
               users="salesMgr actRep cusRep cusSup seller siteAdmin" />

     <menu name="unlock"
             action="basefrm.unlockContract()"
              users="salesMgr seller siteAdmin" />

  </button>

 <view name="AllList"
        action="top.setContent(basefrm.getListTitle(), basefrm.constructURL('/webapp/wcs/tools/servlet/NewDynamicListView?state=AllList&amp;ActionXMLFile=contract.ContractList&amp;cmd=ContractListView&amp;accountId=' + basefrm.getAccountId()) ,false)" />
  <view name="DraftList"
        action="top.setContent(basefrm.getListTitle(), basefrm.constructURL('/webapp/wcs/tools/servlet/NewDynamicListView?state=DraftList&amp;ActionXMLFile=contract.ContractList&amp;cmd=ContractListView&amp;accountId=' + basefrm.getAccountId()),false)" />
