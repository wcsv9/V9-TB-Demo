<action resourceBundle="emailactivity.EmailActivityNLS"
	formName="emailActivityForm"
	helpKey="MC.emailactivity.EmailActivityList.Help">

	<parameter listsize="20"
		startindex="0"
		resultssize="0"
		orderby="name" />
 
	<scrollcontrol title="emailActivityListTitle"
		display="true" />

	<controlpanel display="true" />

	<button>
		<menu name="newEmailActivity"
			action="basefrm.newEmailActivity()" />
		<menu name="change"
			action="basefrm.changeEmailActivity()"
			selection="single" />
                <menu name="statistics"   
			action="basefrm.getEmailActivitySummary()"
			selection="single" />			
		<menu name="delete1"
			action="basefrm.deleteEmailActivity()"
			selection="multiple" />
		<menu name="manageEmailTemplates"
			action="basefrm.manageEmailTemplates()" />
	</button>
</action>
