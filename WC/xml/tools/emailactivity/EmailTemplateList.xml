<action resourceBundle="emailactivity.EmailActivityNLS"
	formName="manageEmailTemplateListForm"
	helpKey="MC.emailactivity.manageEmailTemplateList.Help">

	<parameter listsize="20"
		startindex="0"
		resultssize="0"
		orderby="name" />

 
	<scrollcontrol title="manageEmailTemplateListTitle"
		display="true" />

	<controlpanel display="true" />

	<button>
		<menu name="newEMailTemplate"
			action="basefrm.newEmailTemplate()" />
		<menu name="change"
			action="basefrm.changeEmailTemplate()"
			selection="single" />
		<menu name="preview"
			action="basefrm.previewEmailTemplate()"
			selection="single" />
		<menu name="copy"
			action="basefrm.duplicateEmailActivity()"
			selection="single" />
        <menu name="delete"   
			action="basefrm.deleteEmailTemplate()"
			selection="multiple" />
	</button>

</action>
