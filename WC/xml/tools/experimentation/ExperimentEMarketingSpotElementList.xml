<action resourceBundle="experiment.experimentRB"
        formName="experimentTestElementForm"
        helpKey="MC.experiment.ExperimentDefinitionPanel.Help">

  <parameter listsize="20"
             startindex="0"
             resultssize="0" />

  <scrollcontrol title="experimentalElementListTitle"
                 display="false" />

  <controlpanel display="false" />

  <button>
    <menu name="new"
          action="basefrm.newTestElement()" />
    <menu name="properties"
          action="basefrm.changeTestElement()"
          selection="single" />
    <menu name="summary"
          action="basefrm.summaryTestElement()"
          selection="single" />
    <menu name="addnoellipsis"
          action="basefrm.addTestElement()" />
    <menu name="remove"
          action="basefrm.removeTestElement()"
          selection="multiple" />
