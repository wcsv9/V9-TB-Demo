<action resourceBundle="guidedSell.guidedSellRB"
	formName="GSAnswerListForm">

	<parameter listsize="20"
		startindex="0"
		resultssize="0"
		orderby="name" />

	<scrollcontrol title=" "
		display="false" />

	<button>
		<menu 	name="newButton"
		      	action="basefrm.newGSAnswer()"/>

		<menu		name="changeButton"
				action="basefrm.changeGSAnswer()"
				selection="single" />

		<menu		name="moveUpButton"
				action="basefrm.moveAnswerUp()"
				selection="single" />

		<menu		name="moveDownButton"
				action="basefrm.moveAnswerDown()"
				selection="single" />

		<menu		name="removeButton"
				action="basefrm.removeGSAnswer()"
				selection="multiple" />
	</button>
</action>
