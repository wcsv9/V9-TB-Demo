<action resourceBundle="guidedSell.guidedSellRB"
	formName="guidedSellQuestionForm"  
	helpKey="MC.guidedsell.gsquestions.Help" >

	<parameter listsize="20"
		startindex="0"
		resultssize="0"
		orderby="questions" />

	<scrollcontrol  title=" " display="false" />

	<button>
		<menu		name="gsQuestionListNewButton"
				action="basefrm.newQuestion()" />

		<menu		name="gsQuestionListChangeButton" 
				action="basefrm.changeQuestion()" 
				selection="single" />

		<menu 	name="gsQuestionListAnswerButton"
			      action="basefrm.getAnswers()"
				selection="single" />  

		<menu		name="gsQuestionListQAButton"
				action="basefrm.qnaTree()" />

		<menu		name="gsQuestionListRemoveButton"
				action="basefrm.removeQuestion()" 
				selection="multiple" />

	</button>
</action>
