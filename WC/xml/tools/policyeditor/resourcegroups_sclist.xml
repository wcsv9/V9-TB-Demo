    users="siteAdmin"
    component="testComponent"/>


  <menu name="ShowResourcesButtonName"
    action="basefrm.doShowResources()"
    selection="single"
    users="siteAdmin"
    component="testComponent"/>

  <menu name="ShowActionGroupButtonName"
   action="basefrm.doShowActionGroup()"
    selection="single"
    users="siteAdmin"
    component="testComponent"/>

  <menu name="ShowPoliciesButtonName"
   action="basefrm.doShowPolicies()"
    selection="single"
    users="siteAdmin"
    component="testComponent"/>

