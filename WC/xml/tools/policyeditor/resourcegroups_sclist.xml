        listsize="22"
        startindex="0"
        endindex="0"
        resultsize="0"
        orderby="GRPNAME"
        searchId=""
    />

  <scrollcontrol
        title="resourceGroupListTitle"
	  display="true"/>
  

  <controlpanel
        display="true"/>
  
    
  <button>

  <menu name="newButton"
    action="basefrm.doNew()"
    users="siteAdmin"
    component="testComponent"/>

  <menu name="changeButton"
    action="basefrm.doChange()"
