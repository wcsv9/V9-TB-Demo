<action resourceBundle="segmentation.resources"
        formName="segmentForm"
        helpKey="MC.segmentation.segmentNotebookExcludedCustomerList.Help">

  <parameter listsize="20"
             startindex="0"
             resultssize="0"
             orderby="logonId"
             view="explicitlyExcluded" />

  <scrollcontrol title="excludeCustomerPanelTitle"
                 display="false" />

  <controlpanel display="false" />

  <button>
    <menu name="customerListAddButton"
          action="basefrm.addCustomers()" />
    <menu name="customerListRemoveButton"
          action="basefrm.removeCustomers()"
          selection="multiple" />
    <menu name="CustomerRemoveAllButton"
          action="basefrm.removeAllCustomers()" />
  </button>

</action>
