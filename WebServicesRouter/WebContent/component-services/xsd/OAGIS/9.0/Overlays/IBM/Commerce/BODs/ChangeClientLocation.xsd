<schema xmlns="http://www.w3.org/2001/XMLSchema" xmlns:ecore="http://www.eclipse.org/emf/2002/Ecore"
	xmlns:oa="http://www.openapplications.org/oagis/9"
	xmlns:_loc="http://www.ibm.com/xmlns/prod/commerce/9/location"	
	attributeFormDefault="unqualified" elementFormDefault="qualified" 
	targetNamespace="http://www.ibm.com/xmlns/prod/commerce/9/location"
	ecore:nsPrefix="_loc" 
	ecore:package="com.ibm.commerce.location.facade.datatypes">

	<annotation>
		<documentation>
			<![CDATA[
				<Service name="ChangeClientLocation">
					<ActionCode></ActionCode>
					<ActionExpression></ActionExpression>
					<Description>
							Change the ClientLocation nouns
					</Description>
				</Service>
			]]>
		</documentation>
	</annotation>

	<import namespace="http://www.openapplications.org/oagis/9"
		schemaLocation="../../../../Resources/Components/Common/Meta.xsd" />

	<include schemaLocation="../Resources/Nouns/ClientLocation.xsd" />

	<element name="ChangeClientLocation" type="_loc:ChangeClientLocationType">
		<annotation>
			<documentation>
				Element definition of the ChangeClientLocation BOD.
			</documentation>
		</annotation>
	</element>

	<complexType name="ChangeClientLocationType">
		<annotation>
			<documentation>
				Type definition of the ChangeClientLocation BOD.
			</documentation>
		</annotation>
		<complexContent>
			<extension base="oa:BusinessObjectDocumentType">
				<sequence>
					<element name="DataArea" type="_loc:ChangeClientLocationDataAreaType">
						<annotation>
							<documentation>Data area of the ChangeClientLocation BOD.</documentation>
						</annotation>
					</element>
				</sequence>
			</extension>
		</complexContent>
	</complexType>

	<complexType name="ChangeClientLocationDataAreaType">
		<annotation>
			<documentation>Type definition of the ChangeClientLocation BOD's data area.</documentation>
		</annotation>
		<sequence>
			<element ref="oa:Change">
				<annotation>
					<documentation>The Change verb.</documentation>
				</annotation>
			</element>
			<element ref="_loc:ClientLocation" maxOccurs="unbounded">
				<annotation>
					<documentation>The ClientLocation noun.</documentation>
				</annotation>
			</element>
		</sequence>
	</complexType>

</schema>
