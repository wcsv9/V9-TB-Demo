<schema xmlns="http://www.w3.org/2001/XMLSchema" xmlns:ecore="http://www.eclipse.org/emf/2002/Ecore"
	xmlns:oa="http://www.openapplications.org/oagis/9"
	xmlns:_pgl="http://www.ibm.com/xmlns/prod/commerce/9/pagelayout"	
	attributeFormDefault="unqualified" elementFormDefault="qualified" 
	targetNamespace="http://www.ibm.com/xmlns/prod/commerce/9/pagelayout"
	ecore:nsPrefix="_pgl" 
	ecore:package="com.ibm.commerce.pagelayout.facade.datatypes">

	<annotation>
		<documentation>
			<![CDATA[
				<Service name="GetPage">
					<ActionCode></ActionCode>
					<ActionExpression></ActionExpression>
					<Description>
							Get the Page nouns
					</Description>
				</Service>
			]]>
		</documentation>
	</annotation>

	<import namespace="http://www.openapplications.org/oagis/9"
		schemaLocation="../../../../Resources/Components/Common/Meta.xsd" />

	<include schemaLocation="../Resources/Nouns/Page.xsd" />

	<element name="GetPage" type="_pgl:GetPageType">
		<annotation>
			<documentation>
				Element definition of the GetPage BOD.
			</documentation>
		</annotation>
	</element>

	<complexType name="GetPageType">
		<annotation>
			<documentation>
				Type definition of the GetPage BOD.
			</documentation>
		</annotation>
		<complexContent>
			<extension base="oa:BusinessObjectDocumentType">
				<sequence>
					<element name="DataArea" type="_pgl:GetPageDataAreaType">
						<annotation>
							<documentation>Data area of the GetPage BOD.</documentation>
						</annotation>
					</element>
				</sequence>
			</extension>
		</complexContent>
	</complexType>

	<complexType name="GetPageDataAreaType">
		<annotation>
			<documentation>Type definition of the GetPage BOD's data area.</documentation>
		</annotation>
		<sequence>
			<element ref="oa:Get">
				<annotation>
					<documentation>The Get verb.</documentation>
				</annotation>
			</element>
			<element ref="_pgl:Page" minOccurs="0" maxOccurs="unbounded">
				<annotation>
					<documentation>The Page noun.</documentation>
				</annotation>
			</element>
		</sequence>
	</complexType>

</schema>

