<schema xmlns="http://www.w3.org/2001/XMLSchema" xmlns:ecore="http://www.eclipse.org/emf/2002/Ecore"
	xmlns:oa="http://www.openapplications.org/oagis/9"
	xmlns:_mkt="http://www.ibm.com/xmlns/prod/commerce/9/marketing"	
	attributeFormDefault="unqualified" elementFormDefault="qualified" 
	targetNamespace="http://www.ibm.com/xmlns/prod/commerce/9/marketing"
	ecore:nsPrefix="_mkt" 
	ecore:package="com.ibm.commerce.marketing.facade.datatypes">

	<annotation>
		<documentation>
			This Activity XML schema file defines the ShowActivity BOD which is used to show an activity or
			list of Activitys.
		</documentation>
	</annotation>

	<import namespace="http://www.openapplications.org/oagis/9"
		schemaLocation="../../../../Resources/Components/Common/Meta.xsd" />

	<include schemaLocation="../Resources/Nouns/Activity.xsd" />

	<element name="ShowActivity" type="_mkt:ShowActivityType">
		<annotation>
			<documentation>Element definition of the ShowActivity BOD.</documentation>
		</annotation>
	</element>

	<complexType name="ShowActivityType">
		<annotation>
			<documentation>Type definition of the ShowActivity BOD.</documentation>
		</annotation>
		<complexContent>
			<extension base="oa:BusinessObjectDocumentType">
				<sequence>
					<element name="DataArea" type="_mkt:ShowActivityDataAreaType">
						<annotation>
							<documentation>Data area of the ShowActivity BOD.</documentation>
						</annotation>
					</element>
				</sequence>
			</extension>
		</complexContent>
	</complexType>

	<complexType name="ShowActivityDataAreaType">
		<annotation>
			<documentation>Type definition of the ShowActivity BOD's data area.</documentation>
		</annotation>
		<sequence>
			<element ref="oa:Show">
				<annotation>
					<documentation>The Show verb.</documentation>
				</annotation>
			</element>
			<element ref="_mkt:Activity" minOccurs="0" maxOccurs="unbounded">
				<annotation>
					<documentation>The Activity noun.</documentation>
				</annotation>
			</element>
		</sequence>
	</complexType>

</schema>
