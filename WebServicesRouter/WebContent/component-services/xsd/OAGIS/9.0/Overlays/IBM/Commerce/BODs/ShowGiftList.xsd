<schema xmlns="http://www.w3.org/2001/XMLSchema" xmlns:ecore="http://www.eclipse.org/emf/2002/Ecore"
	xmlns:oa="http://www.openapplications.org/oagis/9"
	xmlns:_gft="http://www.ibm.com/xmlns/prod/commerce/9/giftcenter"	
	attributeFormDefault="unqualified" elementFormDefault="qualified" 
	targetNamespace="http://www.ibm.com/xmlns/prod/commerce/9/giftcenter"
	ecore:nsPrefix="_gft" 
	ecore:package="com.ibm.commerce.giftcenter.facade.datatypes">

	<annotation>
		<documentation>
			This GiftList XML schema file defines the ShowGiftList BOD which is used to show an giftlist or
			list of GiftLists.
		</documentation>
	</annotation>

	<import namespace="http://www.openapplications.org/oagis/9"
		schemaLocation="../../../../Resources/Components/Common/Meta.xsd" />

	<include schemaLocation="../Resources/Nouns/GiftList.xsd" />

	<element name="ShowGiftList" type="_gft:ShowGiftListType">
		<annotation>
			<documentation>Element definition of the ShowGiftList BOD.</documentation>
		</annotation>
	</element>

	<complexType name="ShowGiftListType">
		<annotation>
			<documentation>Type definition of the ShowGiftList BOD.</documentation>
		</annotation>
		<complexContent>
			<extension base="oa:BusinessObjectDocumentType">
				<sequence>
					<element name="DataArea" type="_gft:ShowGiftListDataAreaType">
						<annotation>
							<documentation>Data area of the ShowGiftList BOD.</documentation>
						</annotation>
					</element>
				</sequence>
			</extension>
		</complexContent>
	</complexType>

	<complexType name="ShowGiftListDataAreaType">
		<annotation>
			<documentation>Type definition of the ShowGiftList BOD's data area.</documentation>
		</annotation>
		<sequence>
			<element ref="oa:Show">
				<annotation>
					<documentation>The Show verb.</documentation>
				</annotation>
			</element>
			<element ref="_gft:GiftList" minOccurs="0" maxOccurs="unbounded">
				<annotation>
					<documentation>The GiftList noun.</documentation>
				</annotation>
			</element>
		</sequence>
	</complexType>

</schema>
