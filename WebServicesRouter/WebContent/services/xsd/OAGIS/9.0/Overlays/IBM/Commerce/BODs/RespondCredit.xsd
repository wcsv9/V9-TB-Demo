<schema xmlns="http://www.w3.org/2001/XMLSchema" xmlns:ecore="http://www.eclipse.org/emf/2002/Ecore"
	ecore:package="com.ibm.commerce.payment.datatypes" ecore:nsPrefix="Payment"
	targetNamespace="http://www.ibm.com/xmlns/prod/commerce/payment"
	xmlns:oa="http://www.openapplications.org/oagis/9"
	xmlns:wcf="http://www.ibm.com/xmlns/prod/commerce/foundation"
	xmlns:pay="http://www.ibm.com/xmlns/prod/commerce/payment" elementFormDefault="qualified"
	attributeFormDefault="unqualified">

	<annotation>
		<documentation>
			This payment XML schema file defines the RespondCredit BOD which is used to respond to
			the ChangeCredit BOD.
		</documentation>
	</annotation>

	<import namespace="http://www.openapplications.org/oagis/9"
		schemaLocation="../../../../../../Oagis9Dependencies.xsd" />

	<include schemaLocation="../Resources/Nouns/Credit.xsd" />

	<element name="RespondCredit" type="pay:RespondCreditType">
		<annotation>
			<documentation>Element definition of the RespondCredit BOD.</documentation>
		</annotation>
	</element>

	<complexType name="RespondCreditType">
		<annotation>
			<documentation>Type definition of the RespondCredit BOD.</documentation>
		</annotation>
		<complexContent>
			<extension base="oa:BusinessObjectDocumentType">
				<sequence>
					<element name="DataArea" type="pay:RespondCreditDataAreaType">
						<annotation>
							<documentation>Data area of the RespondCredit BOD.</documentation>
						</annotation>
					</element>
				</sequence>
			</extension>
		</complexContent>
	</complexType>

	<complexType name="RespondCreditDataAreaType">
		<annotation>
			<documentation>Type definition of the RespondCredit BOD's data area.</documentation>
		</annotation>
		<sequence>
			<element ref="oa:Respond">
				<annotation>
					<documentation>The Respond verb.</documentation>
				</annotation>
			</element>
			<element ref="pay:Credit" minOccurs="0" maxOccurs="unbounded">
				<annotation>
					<documentation>The Credit noun.</documentation>
				</annotation>
			</element>
		</sequence>
	</complexType>

</schema>
